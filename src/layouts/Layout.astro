---
import "../styles.scss";

import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import WebDevFooter from "../components/WebDevFooter.astro";
import CookieBanner from "../components/CookieBanner.astro";
import SmoothScroll from "../components/SmoothScroll.astro";
import ViewTransitions from "../components/ViewTransitions.astro";
import PerformanceOptimiser from "../components/PerformanceOptimiser.astro";
import PerformanceMonitor from "../components/PerformanceMonitor.astro";
import ModernUIEnhancer from "../components/ModernUIEnhancer.astro";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

interface Props {
  title: string;
  description?: string;
  classes?: string;
  transparentHeader?: boolean;
  location?: string;
  keywords?: string;
  ogImage?: string;
  structuredData?: any;
  noindex?: boolean;
}

const {
  title,
  description = "Coulsy Joinery & Small Build - Professional joinery, carpentry, and small build services in York and across Yorkshire. Quality craftsmanship since 1989.",
  classes = "",
  transparentHeader = false,
  // location, // Not used in current implementation
  keywords = "joinery, carpentry, small build, York, Yorkshire, kitchen installation, bespoke joinery, garden offices, heritage restoration",
  ogImage = "/coulsy-logo-sm.jpg",
  structuredData,
  noindex = false,
} = Astro.props;
---

<!doctype html>
<html lang="en" class={classes}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <!-- Favicons - Coulsy Joinery branding -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="icon" type="image/jpeg" href="/favicon.jpg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="msapplication-TileColor" content="#ffffff" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content={keywords} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.site)} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Robots -->
    {
      noindex ? (
        <meta name="robots" content="noindex, nofollow" />
      ) : (
        <meta name="robots" content="index, follow" />
      )
    }

    <!-- Performance Optimisations -->
    <PerformanceOptimiser />

    <!-- Structured Data -->
    {
      structuredData && (
        <script
          is:inline
          type="application/ld+json"
          set:html={JSON.stringify(structuredData)}
        />
      )
    }

    <!-- Modern UI Enhancements -->
    <ModernUIEnhancer />
  </head>
  <body class="antialiased">
    <Navbar transparent={transparentHeader} />

    <main class={classes}>
      <slot />
    </main>

    <Footer />
    <WebDevFooter />
    <CookieBanner />
    <SmoothScroll />
    <ViewTransitions />
    <PerformanceMonitor />
  </body>
</html>
