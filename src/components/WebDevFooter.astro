---
interface Props {
  location?: string;
}

const { location } = Astro.props;
---

<div class="sub-footer bg-gray-50 py-4 mt-8 border-t border-gray-200">
  <div class="container mx-auto px-4">
    <div class="text-center">
      <p class="text-sm text-gray-600 mb-3">
        {location && `Professional joinery services in ${location}. `}
        Website built by
      </p>
      <div class="flex items-center justify-center mb-3">
        <a
          href="https://coulsycode.co.uk/"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:opacity-80 transition-opacity"
        >
          <img
            src="/coulsycode_brand_pack/coulsycode-logo-full-transparent.png"
            alt="Coulsy Code"
            class="h-8 w-auto"
            loading="lazy"
          />
        </a>
      </div>
      <p class="text-xs text-gray-400 mt-1">
        Need a professional website?
        <a
          href="https://coulsycode.co.uk/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-blue-600 hover:text-blue-800 transition-colors"
        >
          Let's discuss your project
        </a>
      </p>
    </div>
  </div>
</div>

