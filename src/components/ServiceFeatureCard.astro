---
interface Props {
  title: string;
  description: string;
  borderColor?: "accent" | "brand";
  highlighted?: boolean;
}

const {
  title,
  description,
  borderColor = "accent",
  highlighted = false,
} = Astro.props;

const borderClass =
  borderColor === "brand"
    ? "border-brand-500"
    : "border-accent-500";
const highlightClass = highlighted
  ? "bg-gradient-to-r from-accent-50 to-white"
  : "";
---

<div class={`card card-hover border-l-4 ${borderClass} ${highlightClass}`}>
  <div class="card-body">
    <h3 class="text-lg font-semibold text-neutral-900 mb-2">{title}</h3>
    <p class="text-neutral-700 leading-relaxed" set:html={description} />
  </div>
</div>

