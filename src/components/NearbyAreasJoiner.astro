---
import { capitalizeFirstLetter } from "../utils/capitalizeFirstLetter";
import { getNearbyLocations } from "../utils/getNearbyLocations";

interface Props {
  location?: string;
}

const { location } = Astro.props;
// Set the max search radius (in miles) for nearby locations that i'm willing to travel for this service
const radius = 20;
const nearbyLocations = getNearbyLocations(location, radius);
---

<section class="w-full py-6 md:py-10 lg:py-12">
  <div class="px-4 md:px-6">
    <div
      class="flex flex-col items-center justify-center space-y-4 text-center"
    >
      <div class="space-y-2">
        <p class="max-w-[700px] text-gray-500 text-sm md:text-base">
          I provide joinery services in nearby towns
          {location ? ` near ${capitalizeFirstLetter(location)}` : ""}, whether
          it’s a village, town or city. Let me know where you are — I’ll do my
          best to help.
        </p>
      </div>
    </div>

    <div
      class="mx-auto grid max-w-5xl grid-cols-1 gap-4 py-6 lg:grid-cols-4 sm:grid-cols-2 md:grid-cols-3 lg:gap-6 text-center"
    >
      {
        nearbyLocations.map(({ slug }) => (
          <a
            class="group rounded bg-white p-2 shadow-sm border border-gray-100 transition hover:shadow-sm hover:bg-yellow-50 text-sm"
            href={`/joinery-services/${slug}-joiner`}
          >
            <div class="text-base font-medium text-gray-800 group-hover:text-yellow-700">
              {slug.replace(/-/g, " ").replace(/\b\w/g, (c) => c.toUpperCase())}
            </div>
          </a>
        ))
      }
    </div>

    <div class="text-center mt-8">
      <p class="text-gray-600">
        Don’t see your area listed? <a
          href="/contact"
          class="text-yellow-700 font-semibold underline hover:text-yellow-800"
          >Get in touch</a
        > — I might still be able to help.
      </p>
    </div>
  </div>
</section>
