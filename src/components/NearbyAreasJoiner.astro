---
import { LOCATIONS, NEARBY_LOCATIONS } from "../constants/locations";
import { capitalizeFirstLetter } from "../utils/capitalizeFirstLetter";

interface Props {
  location?: string;
}

const { location } = Astro.props;

const radius = 20;
const BASE_LAT = 53.9655;
const BASE_LNG = -1.205;

function toRadians(degrees: number): number {
  return degrees * (Math.PI / 180);
}

function haversineDistance(
  lat1: number,
  lng1: number,
  lat2: number,
  lng2: number
): number {
  const dLat = toRadians(lat2 - lat1);
  const dLng = toRadians(lng2 - lng1);
  const a =
    Math.sin(dLat / 2) ** 2 +
    Math.cos(toRadians(lat1)) *
      Math.cos(toRadians(lat2)) *
      Math.sin(dLng / 2) ** 2;
  return 3958.8 * 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
}

const curated =
  location && NEARBY_LOCATIONS[location]
    ? NEARBY_LOCATIONS[location]
    : NEARBY_LOCATIONS.default;

const curatedWithCoords = LOCATIONS.filter((loc) => curated.includes(loc.slug));

const nearbyLocations = curatedWithCoords
  .filter(
    ({ lat, lng }) => haversineDistance(BASE_LAT, BASE_LNG, lat, lng) <= radius
  )
  .map((loc) => loc.slug)
  .filter((slug) => slug !== location);
---

<section class="w-full py-12 md:py-24 lg:py-30">
  <div class="px-4 md:px-6">
    <div
      class="flex flex-col items-center justify-center space-y-4 text-center"
    >
      <div class="space-y-2">
        <p
          class="max-w-[700px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
        >
          We also offer expert joinery services in nearby areas
          {location ? ` near ${capitalizeFirstLetter(location)}` : ""}. If your
          town isn’t listed, just get in touch — we’re happy to help.
        </p>
      </div>
    </div>

    <div
      class="mx-auto grid max-w-5xl grid-cols-1 gap-6 py-12 lg:grid-cols-4 sm:grid-cols-2 md:grid-cols-3 lg:gap-8 text-center"
    >
      {
        nearbyLocations.map((loc) => (
          <a
            class="group rounded-lg bg-white p-3 shadow-sm border border-gray-200 transition hover:shadow-md hover:bg-yellow-50"
            href={`/joinery-services/${loc}-joiner`}
          >
            <div class="text-base font-medium text-gray-800 group-hover:text-yellow-700">
              {capitalizeFirstLetter(loc)}
            </div>
          </a>
        ))
      }
    </div>

    <div class="text-center mt-8">
      <p class="text-gray-600">
        Don’t see your area? Just
        <a
          href="/contact"
          class="text-yellow-700 font-semibold underline hover:text-yellow-800"
          >get in touch</a
        >
        — we may still be able to help.
      </p>
    </div>
  </div>
</section>
