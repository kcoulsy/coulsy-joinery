---
import { Image } from 'astro:assets';

interface GalleryItem {
  src: string;
  alt: string;
  caption?: string;
  loading?: 'lazy' | 'eager';
}

interface Props {
  items: GalleryItem[];
  columns?: 2 | 3 | 4;
  aspectRatio?: 'square' | '16/9' | '4/3';
  showCaptions?: boolean;
}

const {
  items,
  columns = 3,
  aspectRatio = 'square',
  showCaptions = false
} = Astro.props;

const gridCols = {
  2: 'grid-cols-1 sm:grid-cols-2',
  3: 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-4'
};

const aspectClasses = {
  'square': 'aspect-square',
  '16/9': 'aspect-video',
  '4/3': 'aspect-[4/3]'
};
---

<div class={`grid ${gridCols[columns]} gap-4 md:gap-6`}>
  {items.map((item, index) => (
    <div class="group relative overflow-hidden rounded-lg bg-gray-100">
      <div class={`${aspectClasses[aspectRatio]} relative`}>
        <Image
          src={item.src}
          alt={item.alt}
          width={400}
          height={aspectRatio === 'square' ? 400 : aspectRatio === '16/9' ? 225 : 300}
          format="webp"
          quality={80}
          loading={item.loading || (index < 3 ? 'eager' : 'lazy')}
          class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
          decoding="async"
        />
        
        <!-- Overlay on hover -->
        <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300 flex items-center justify-center">
          <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
            </svg>
          </div>
        </div>
      </div>
      
      {showCaptions && item.caption && (
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4">
          <p class="text-white text-sm font-medium">{item.caption}</p>
        </div>
      )}
    </div>
  ))}
</div>

<style>
  /* Optimize for Core Web Vitals */
  .group img {
    will-change: transform;
  }
  
  /* Reduce layout shift */
  .group {
    contain: layout style paint;
  }
</style> 