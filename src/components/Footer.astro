---
import Image from "astro/components/Image.astro";
import coulsyLogo from "../assets/images/coulsy-logo-sm.jpg";
---

<footer class="w-full text-gray-700 bg-gray-100 body-font">
  <div
    class="container flex flex-col flex-wrap px-5 py-24 mx-auto md:items-center lg:items-start md:flex-row"
  >
    <!-- Logo + Social -->
    <div class="flex-shrink-0 w-64 mx-auto text-center md:mx-0 md:text-left">
      <a
        href="/"
        class="flex items-center justify-center font-medium text-gray-900 title-font md:justify-start"
        aria-label="Coulsy joinery Logo"
      >
        <Image
          src={coulsyLogo}
          width="100"
          height="100"
          class="object-fit"
          alt="Coulsy Carpentry and joinery"
          loading="lazy"
        />
      </a>
      <div class="mt-4">
        <div class="flex items-center space-x-3 mt-2 sm:mt-0">
          <!-- LinkedIn -->
          <a
            href="https://www.linkedin.com/company/coulsy-limited/?viewAsMember=true"
            target="_blank"
            rel="noopener"
            class="text-gray-500 hover:text-gray-700 mr-3"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"
              ></path>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
          <!-- YouTube -->
          <a
            href="https://www.youtube.com/@coulsyjoinery"
            target="_blank"
            rel="noopener"
            class="text-gray-500 hover:text-gray-700 inline-block align-middle translate-y-[1px]"
            aria-label="YouTube"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M23.5 6.5s-.2-1.7-.8-2.4c-.8-.8-1.7-.8-2.2-.9-3.1-.2-7.8-.2-7.8-.2h-.1s-4.7 0-7.8.2c-.5 0-1.4.1-2.2.9-.6.7-.8 2.4-.8 2.4S1 8.3 1 10.1v1.8c0 1.8.2 3.6.2 3.6s.2 1.7.8 2.4c.8.8 1.9.8 2.4.9 1.8.1 7.6.2 7.6.2s4.7 0 7.8-.2c.5 0 1.4-.1 2.2-.9.6-.7.8-2.4.8-2.4s.2-1.8.2-3.6v-1.8c0-1.8-.2-3.6-.2-3.6zM9.8 14.7V9.4l5.7 2.6-5.7 2.7z"
              ></path>
            </svg>
          </a>

          {
            /*
          <!-- Facebook -->
          <a href="/" class="ml-3 text-gray-500 hover:text-gray-700" aria-label="Facebook">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/>
            </svg>
          </a>
          <!-- Twitter (X) -->
          <a href="/" class="ml-3 text-gray-500 hover:text-gray-700" aria-label="Twitter (X)">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
            </svg>
          </a>
          <!-- Instagram -->
          <a href="/" class="ml-3 text-gray-500 hover:text-gray-700" aria-label="Instagram">
