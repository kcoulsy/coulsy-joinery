---
import { Image } from "astro:assets";
import studWall from "../assets/images/stud-wall-new-build.jpeg";
import mouldingPlane from "../assets/images/moulding_plane.png";
import gardenOffice from "../assets/images/garden-offices/garden-office.jpeg";
import gardenRooms from "../assets/images/garden-rooms/garden-rooms.jpeg";
import kitchenInstallers from "../assets/images/Kitchen-Installers.jpg";
import SubcontractImg from "../assets/images/sub-contract.jpg";
import rooftop from "../assets/images/rooftop.jpg";
import cutRoofHeader from "../assets/images/cut-roofs/cut-roof-header.jpg";
import doorHanging from "../assets/images/doors/fire-doors-sign.png";
import heritage from "../assets/images/heritage/oak-window-restoration.jpg";
import accessibleKitchen from "../assets/images/accessible-kitchens/accessible-kitchen-main.jpg";
import steelFireExit from "../assets/images/steel-exit-doors/Security-Fire-Exit-Door-510x510.jpg";
import generalJoinery from "../assets/images/general-joinery/fencing-and-gates.jpg";

const services = [
  {
    title: "General Joinery",
    href: "/joinery-services/general-joinery",
    image: generalJoinery,
    alt: "General joinery services in York",
    description: "From floors and skirtings to shelves and storage.",
    category: "Joinery",
  },
  {
    title: "Bespoke Joinery",
    href: "/joinery-services/bespoke-joinery",
    image: mouldingPlane,
    alt: "Bespoke Joinery",
    description: "Made-to-measure joinery tailored to your space and style.",
    category: "Bespoke",
  },
  {
    title: "Heritage Joinery",
    href: "/joinery-services/heritage-restoration-joinery",
    image: heritage,
    alt: "Heritage Joinery Restoration",
    description: "Expert restoration and reproduction of period joinery.",
    category: "Heritage",
  },
  {
    title: "Fitted Kitchens",
    href: "/joinery-services/kitchen-installers",
    image: kitchenInstallers,
    alt: "Fitted Kitchen and Installers York",
    description: "Full kitchen installs tailored to your layout and finish.",
    category: "Kitchens",
  },
  {
    title: "Accessible Kitchens",
    href: "/joinery-services/accessible-kitchen-installers",
    image: accessibleKitchen,
    alt: "Accessible kitchens York",
    description: "Practical kitchen solutions designed for accessibility.",
    category: "Specialist",
  },
  {
    title: "Stud Walls",
    href: "/joinery-services/stud-wall-partitioning",
    image: studWall,
    alt: "stud wall and partitioning installers in York",
    description: "Room layouts adapted with solid timber studwork.",
    category: "Construction",
  },
  {
    title: "Truss Roofs",
    href: "/joinery-services/truss-roof-installers",
    image: rooftop,
    alt: "Truss and trussed roof installers",
    description: "Pre-engineered truss roof installation and setting out.",
    category: "Roofing",
  },
  {
    title: "Traditional Cut Roofs",
    href: "/joinery-services/traditional-cut-roofs",
    image: cutRoofHeader,
    alt: "Traditional Cut Roofs",
    description: "Hand-cut timber roof structures built to spec.",
    category: "Heritage",
  },
  {
    title: "Sub Contract Joinery",
    href: "/joinery-services/joinery-subcontractors",
    image: SubcontractImg,
    alt: "Sub contract Joinery",
    description: "Joinery labour and support services for larger projects.",
    category: "Commercial",
  },
  {
    title: "Doors",
    href: "/joinery-services/door-hanging",
    image: doorHanging,
    alt: "Door Hanging and installers",
    description: "Internal and external doors fitted with care and precision.",
    category: "Joinery",
  },
  {
    title: "Steel Fire Exit Doors",
    href: "/joinery-services/steel-fire-exit-doors-installers",
    image: steelFireExit,
    alt: "Steel fire exit and fire escape doors",
    description: "Robust, compliant fire exit doors for commercial spaces.",
    category: "Commercial",
  },
  {
    title: "Garden Offices",
    href: "/joinery-services/garden-offices",
    image: gardenOffice,
    alt: "Timber-framed garden office installation in York",
    description: "Custom-built insulated garden offices for home working and productivity, designed for comfort year-round.",
    category: "Bespoke",
  },
  {
    title: "Garden Rooms",
    href: "/joinery-services/garden-rooms",
    image: gardenRooms,
    alt: "Bespoke garden room built with timber cladding in York",
    description: "Made-to-measure garden rooms designed for leisure, hobbies, or guest space â€” fully insulated and tailored to your style.",
    category: "Bespoke",
  },
];
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 max-w-7xl mx-auto">
  {
    services.map((service) => (
      <a
        href={service.href}
        class="group relative bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 ease-in-out hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2"
        aria-label={`Learn more about ${service.title} services`}
      >
        <!-- Image Container -->
        <div class="relative overflow-hidden rounded-t-xl">
          <Image
            src={service.image}
            alt={service.alt}
            loading="lazy"
            width={400}
            height={300}
            class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105"
          />
          <!-- Overlay on hover -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          
          <!-- Service badge -->
          <div class="absolute top-3 left-3">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-brand-100 text-brand-800">
              {service.title}
            </span>
          </div>
        </div>

        <!-- Content -->
        <div class="p-6">
          <h3 class="text-lg font-semibold text-brand-900 mb-2 group-hover:text-brand-600 transition-colors duration-200">
            {service.title}
          </h3>
          <p class="text-sm text-brand-600 leading-relaxed">
            {service.description}
          </p>
          
          <!-- CTA Arrow -->
          <div class="mt-4 flex items-center text-brand-500 group-hover:text-brand-600 transition-colors duration-200">
            <span class="text-sm font-medium">Learn more</span>
            <svg 
              class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform duration-200" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </div>

        <!-- Hover effect border -->
        <div class="absolute inset-0 rounded-xl border-2 border-transparent group-hover:border-brand-200 transition-colors duration-300 pointer-events-none"></div>
      </a>
    ))
  }
</div>
