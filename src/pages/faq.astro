// Flatten all questions for schema
const allFaqs = faqData.flatMap((category) => category.questions);

// SEO data
const seoData = {
  title:
    "Joinery & Small Build FAQ - Common Questions About Joinery Services | Coulsy Joinery",
  description:
    "Get answers to common questions about joinery services, kitchen installation, bespoke joinery, garden offices, and small build work. Expert joinery services in Yorkshire since 1989.",
  keywords:
    "joinery FAQ, joinery questions, kitchen installation, bespoke joinery, garden offices, small build, Yorkshire joinery",
};
---

<Layout
  title={seoData.title}
  description={seoData.description}
  classes="mt-8 mb-16"
>
  <!-- FAQ Schema -->
  <FAQSchema
    faqs={allFaqs}
    pageTitle="Joinery & Small Build FAQ"
    pageDescription="Common questions about joinery services, kitchen installation, bespoke joinery, and small build work"
  />

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-brand to-brand-dark text-white py-20">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-8">
        Frequently Asked Questions
      </h1>
      <p
        class="text-xl md:text-2xl text-white/90 max-w-3xl mx-auto leading-relaxed"
      >
        Get answers to common questions about joinery services, kitchen
        installation, bespoke joinery, and small build work. Can't find what
        you're looking for? Contact us directly.
      </p>
    </div>
  </section>

  <!-- FAQ Categories -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <!-- Category Navigation -->
        <div class="mb-16">
          <h2 class="text-4xl font-bold text-center text-brand-900 mb-4">
            Browse by Category
          </h2>
          <p class="text-lg text-gray-600 text-center mb-12 max-w-3xl mx-auto">
            Find answers to your questions by browsing our service categories
          </p>
          <div class="flex flex-wrap justify-center gap-3 max-w-5xl mx-auto">
            {
              faqData.map((category, index) => (
                <button
                  class="category-btn px-8 py-4 bg-white text-gray-700 rounded-xl transition-all duration-300 font-semibold shadow-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-brand focus:ring-opacity-50"
                  data-category={index}
                >
                  {category.category}
                </button>
              ))
            }
          </div>
        </div>

        <!-- FAQ Content -->
        <div class="space-y-12">
          {
            faqData.map((category, categoryIndex) => (
              <div
                class="faq-category bg-white rounded-2xl shadow-lg p-8"
                data-category={categoryIndex}
              >
                <h3 class="text-3xl font-bold text-brand-900 mb-8 border-b border-gray-200 pb-6">
                  {category.category}
                </h3>
                <div class="space-y-6">
                  {category.questions.map((item, questionIndex) => (
                    <div class="faq-item bg-gray-50 border border-gray-200 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300">
                      <button
                        class="faq-question w-full px-8 py-6 text-left bg-gray-50 hover:bg-gray-100 transition-colors duration-300 flex justify-between items-center"
                        data-category={categoryIndex}
                        data-question={questionIndex}
                      >
                        <span class="font-semibold text-gray-800 text-lg pr-4">
                          {item.question}
                        </span>
                        <svg
                          class="faq-icon w-6 h-6 text-gray-500 transform transition-transform duration-300 flex-shrink-0"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 9l-7 7-7-7"
                          />
                        </svg>
                      </button>
                      <div class="faq-answer hidden px-8 py-6 bg-white border-t border-gray-200">
                        <p class="text-gray-700 leading-relaxed text-lg">
                          {item.answer}
                        </p>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Contact Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-brand-900 mb-4">
          Still Have Questions?
        </h2>
        <p class="text-xl text-gray-600 mb-12 max-w-3xl mx-auto">
          Can't find the answer you're looking for? Contact us directly and
          we'll be happy to help.
        </p>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-white p-8 rounded-2xl shadow-lg">
            <h3 class="text-2xl font-semibold text-brand-900 mb-6">
              Get in Touch
            </h3>
            <div class="space-y-4 text-left">
              <div class="flex items-center">
                <svg
                  class="w-6 h-6 text-brand mr-4 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
