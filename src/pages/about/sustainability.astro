---
import Layout from "../../layouts/Layout.astro";
import sustainabilityLogo from "../../assets/images/sustainability_logo.svg";
import { Image } from "astro:assets";
import Breadcrumb from "../../components/Breadcrumb.astro";

// Modern SEO optimization with personal voice preserved
const seoData = {
  title:
    "Sustainability & Environmental Practices - Coulsy Joinery | Eco-Friendly Joinery York",
  description:
    "Coulsy Joinery's commitment to sustainable practices, waste reduction, and environmental responsibility. Eco-friendly joinery solutions in York with minimal environmental impact.",
  keywords:
    "sustainable joinery York, eco-friendly joinery, environmental joinery practices, green building York, sustainable construction",
  canonical: "https://coulsyjoinery.co.uk/about/sustainability",
  structuredData: {
    "@context": "https://schema.org",
    "@type": "WebPage",
    name: "Sustainability & Environmental Practices",
    description:
      "Coulsy Joinery's commitment to sustainable and environmentally responsible practices",
    url: "https://coulsyjoinery.co.uk/about/sustainability",
    mainEntity: {
      "@type": "Organization",
      name: "Coulsy Joinery",
      description:
        "Family-run joinery business committed to sustainable practices",
      url: "https://coulsyjoinery.co.uk",
      address: {
        "@type": "PostalAddress",
        addressRegion: "North Yorkshire",
        addressCountry: "UK",
      },
      hasOfferCatalog: {
        "@type": "OfferCatalog",
        name: "Sustainable Joinery Services",
        itemListElement: [
          {
            "@type": "Offer",
            itemOffered: {
              "@type": "Service",
              name: "Sustainable Materials",
              description:
                "Use of eco-friendly and responsibly sourced materials",
            },
          },
          {
            "@type": "Offer",
            itemOffered: {
              "@type": "Service",
              name: "Waste Reduction",
              description:
                "Minimizing waste through careful planning and material reuse",
            },
          },
          {
            "@type": "Offer",
            itemOffered: {
              "@type": "Service",
              name: "Environmental Compliance",
              description: "Meeting and exceeding environmental regulations",
            },
          },
        ],
      },
    },
  },
};
---

<Layout title={seoData.title} description={seoData.description}>
  <main class="mx-auto relative z-10">
    <section class="w-full container mx-auto px-4 sm:px-6 py-8">
      <div class="pt-8 pb-6">
        <Breadcrumb
          crumbs={[
            { href: "/about", label: "About" },
            { label: "Sustainability", current: true },
          ]}
        />
      </div>

      <!-- Header Section with Enhanced Animation -->
      <div class="text-center mb-16">
        <h1
          class="text-4xl lg:text-6xl font-bold text-brand-900 mb-6 text-balance sustainability-title"
        >
          Sustainability & Environmental Practices
        </h1>
        <p
          class="text-xl text-brand-600 max-w-4xl mx-auto text-balance leading-relaxed sustainability-subtitle"
        >
          We know construction and joinery work can have an impact on the
          environment — and we don't take that lightly. That's why we aim to
          reduce waste, reuse materials where possible, and make thoughtful
          choices every day on site.
        </p>
      </div>

      <!-- Main Content with Staggered Animation -->
      <div class="grid grid-cols-1 lg:grid-cols-2 items-start gap-12 lg:gap-16">
        <!-- Text Content -->
        <div class="space-y-8">
          <!-- Approach Section -->
          <div
            class="sustainability-card bg-green-50 border border-green-200 rounded-xl p-8 shadow-sm hover:shadow-lg transition-all duration-500"
          >
            <h2 class="text-2xl font-semibold text-green-900 mb-4">
              Our Approach to Sustainability
            </h2>
            <p class="text-green-700 leading-relaxed">
              We know construction and joinery work can have an impact on the
              environment — and we don't take that lightly. That's why we aim to
              reduce waste, reuse materials where possible, and make thoughtful
              choices every day on site.
            </p>
          </div>

          <!-- Materials Section -->
          <div
            class="sustainability-card bg-white rounded-xl p-8 shadow-lg border border-brand-100 hover:shadow-xl transition-all duration-500"
          >
            <h2 class="text-2xl font-semibold text-brand-900 mb-6">
              Sustainable Materials
            </h2>
            <p class="text-brand-600 leading-relaxed mb-4">
              We prioritize responsibly sourced materials for our joinery work:
            </p>
            <ul class="space-y-2 text-brand-600">
              <li class="flex items-start group">
                <div
                  class="w-5 h-5 bg-brand-100 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0 group-hover:bg-brand-200 transition-colors duration-300"
                >
                  <svg
                    class="w-3 h-3 text-brand-600"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span
                  class="group-hover:text-brand-700 transition-colors duration-300"
                  >FSC-certified timber from sustainable sources</span
                >
              </li>
              <li class="flex items-start group">
                <div
                  class="w-5 h-5 bg-brand-100 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0 group-hover:bg-brand-200 transition-colors duration-300"
                >
                  <svg
                    class="w-3 h-3 text-brand-600"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span
                  class="group-hover:text-brand-700 transition-colors duration-300"
                  >Recycled steel components where applicable</span
                >
              </li>
              <li class="flex items-start group">
                <div
                  class="w-5 h-5 bg-brand-100 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0 group-hover:bg-brand-200 transition-colors duration-300"
                >
                  <svg
                    class="w-3 h-3 text-brand-600"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span
                  class="group-hover:text-brand-700 transition-colors duration-300"
                  >Low-VOC finishes and adhesives</span
                >
              </li>
            </ul>
          </div>

          <!-- Waste Reduction Section -->
          <div
            class="sustainability-card bg-white rounded-xl p-8 shadow-lg border border-brand-100 hover:shadow-xl transition-all duration-500"
          >
            <h2 class="text-2xl font-semibold text-brand-900 mb-6">
              Waste Reduction
            </h2>
            <p class="text-brand-600 leading-relaxed mb-4">
              We minimize waste through careful planning and material reuse:
            </p>
            <ul class="space-y-2 text-brand-600">
              <li class="flex items-start group">
                <div
                  class="w-5 h-5 bg-brand-100 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0 group-hover:bg-brand-200 transition-colors duration-300"
                >
                  <svg
                    class="w-3 h-3 text-brand-600"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span
                  class="group-hover:text-brand-700 transition-colors duration-300"
                  >Precise measurements to minimize material waste</span
                >
              </li>
              <li class="flex items-start group">
                <div
                  class="w-5 h-5 bg-brand-100 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0 group-hover:bg-brand-200 transition-colors duration-300"
                >
                  <svg
                    class="w-3 h-3 text-brand-600"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span
                  class="group-hover:text-brand-700 transition-colors duration-300"
                  >Recycling of old joinery components</span
                >
              </li>
              <li class="flex items-start group">
                <div
                  class="w-5 h-5 bg-brand-100 rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0 group-hover:bg-brand-200 transition-colors duration-300"
                >
                  <svg
                    class="w-3 h-3 text-brand-600"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span
                  class="group-hover:text-brand-700 transition-colors duration-300"
                  >Responsible disposal of construction materials</span
                >
              </li>
            </ul>
          </div>

          <!-- Environmental Compliance Section -->
          <div
            class="sustainability-card bg-white rounded-xl p-8 shadow-lg border border-brand-100 hover:shadow-xl transition-all duration-500"
          >
            <h2 class="text-2xl font-semibold text-brand-900 mb-6">
              Environmental Compliance
            </h2>
            <p class="text-brand-600 leading-relaxed">
              We meet all environmental regulations that apply to our work. But
              we don't just stop at the minimum. Where there isn't a law or
              guideline in place, we use common sense and experience to do
              what's right for the environment — and we keep a record of it.
            </p>
          </div>

          <!-- Team Involvement Section -->
          <div
            class="sustainability-card bg-white rounded-xl p-8 shadow-lg border border-brand-100 hover:shadow-xl transition-all duration-500"
          >
            <h2 class="text-2xl font-semibold text-brand-900 mb-6">
              Getting the Team Involved
            </h2>
            <p class="text-brand-600 leading-relaxed">
              Everyone we work with is part of this. We make sure our team
              understands the importance of working cleanly and efficiently —
              and we back that up with training, site discussions, and regular
              reviews of how we work.
            </p>
          </div>

          <!-- People Section -->
          <div
            class="sustainability-card bg-white rounded-xl p-8 shadow-lg border border-brand-100 hover:shadow-xl transition-all duration-500"
          >
            <h2 class="text-2xl font-semibold text-brand-900 mb-6">
              Looking After People Too
            </h2>
            <p class="text-brand-600 leading-relaxed">
              Sustainability isn't just about the environment — it's about
              people too. We actively promote wellbeing, health, and safety for
              our clients, team, and community through how we work and the
              choices we make.
            </p>
          </div>

          <!-- Contact CTA -->
          <div
            class="sustainability-card bg-brand-50 rounded-xl p-6 border border-brand-200 hover:shadow-lg transition-all duration-500"
          >
            <p class="text-brand-700">
              If you'd like more detail or a written policy, just
              <a
                href="/contact"
                class="font-semibold text-brand-600 hover:text-brand-700 underline transition-colors duration-300"
              >
                get in touch
              </a>. We're always happy to discuss our environmental practices
              and how we can help with your sustainable building needs.
            </p>
          </div>
        </div>

        <!-- Image Section -->
        <div class="flex items-start justify-center">
          <div
            class="sustainability-image-card bg-white rounded-xl p-6 shadow-lg border border-brand-100 hover:shadow-xl transition-all duration-500 overflow-hidden"
          >
            <div class="relative overflow-hidden rounded-lg">
              <Image
                src={sustainabilityLogo}
                width={526}
                height={489}
                class="object-contain rounded-lg max-w-full h-auto transition-transform duration-700 hover:scale-110"
                alt="Sustainability logo representing Coulsy Joinery's commitment to eco-friendly and environmentally responsible joinery practices"
                loading="eager"
                decoding="async"
                format="webp"
                quality={80}
              />
            </div>
            <p class="text-sm text-brand-600 text-center mt-4">
              Our commitment to sustainable and environmentally responsible
              practices
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<!-- Enhanced Micro-Animations CSS -->
<style>
  /* Header Animations */
  .sustainability-title {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.2s forwards;
  }

  .sustainability-subtitle {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.4s forwards;
  }

  /* Sustainability Cards */
  .sustainability-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .sustainability-card:nth-child(1) {
    animation-delay: 0.6s;
  }
  .sustainability-card:nth-child(2) {
    animation-delay: 0.8s;
  }
  .sustainability-card:nth-child(3) {
    animation-delay: 1s;
  }
  .sustainability-card:nth-child(4) {
    animation-delay: 1.2s;
  }
  .sustainability-card:nth-child(5) {
    animation-delay: 1.4s;
  }
  .sustainability-card:nth-child(6) {
    animation-delay: 1.6s;
  }
  .sustainability-card:nth-child(7) {
    animation-delay: 1.8s;
  }

  .sustainability-card:hover {
    transform: translateY(-5px) scale(1.02);
  }

  /* Image Card */
  .sustainability-image-card {
    opacity: 0;
    transform: translateY(30px) scale(0.95);
    animation: fadeInUpScale 1s ease-out 2s forwards;
  }

  .sustainability-image-card:hover {
    transform: translateY(-5px) scale(1.02);
  }

  /* Keyframe Animations */
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUpScale {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Hover Effects */
  .sustainability-card:hover {
    transform: translateY(-5px) scale(1.02);
  }

  .sustainability-image-card img {
    transition: transform 0.5s ease;
  }

  .sustainability-image-card:hover img {
    transform: scale(1.1);
  }
</style>

<!-- Modern Structured Data -->
<script is:inline
  type="application/ld+json"
  set:html={JSON.stringify(seoData.structuredData)}
/>
