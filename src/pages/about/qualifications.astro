---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import Breadcrumb from "../../components/Breadcrumb.astro";
import CITBImage from "../../assets/images/citb.png";
import cscsGoldImage from "../../assets/images/cscs_gold.png";
import cityAndGuildsImage from "../../assets/images/cityandguilds_logo.png";

// Modern SEO optimization with personal voice preserved
const seoData = {
  title:
    "Qualifications & Certifications - Robert Coulson | 35+ Years Experience Since 1989",
  description:
    "Robert Coulson's qualifications include NVQ Level 7, City & Guilds Distinction, CSCS Gold Card. 35+ years experience since 1989. Fully insured and certified for all joinery work in York.",
  keywords:
    "Robert Coulson qualifications, joinery qualifications York, CSCS Gold Card, City & Guilds joinery, NVQ Level 7 construction, qualified joiner 1989",
  canonical: "https://coulsyjoinery.co.uk/about/qualifications",
  structuredData: {
    "@context": "https://schema.org",
    "@type": "WebPage",
    name: "Qualifications & Certifications",
    description:
      "Robert Coulson's professional qualifications and certifications",
    url: "https://coulsyjoinery.co.uk/about/qualifications",
    mainEntity: {
      "@type": "Person",
      name: "Robert Coulson",
      jobTitle: "Master Joiner",
      description: "Qualified since 1989 with 35+ years of joinery experience",
      hasCredential: [
        {
          "@type": "EducationalOccupationalCredential",
          credentialCategory: "NVQ Level 7 in Construction Senior Management",
          recognizedBy: "Construction Industry Training Board",
          validIn: "United Kingdom",
        },
        {
          "@type": "EducationalOccupationalCredential",
          credentialCategory: "Advanced City & Guilds in Carpentry & Joinery",
          recognizedBy: "City & Guilds",
          validIn: "United Kingdom",
        },
        {
          "@type": "EducationalOccupationalCredential",
          credentialCategory: "CSCS Gold Card",
          recognizedBy: "Construction Skills Certification Scheme",
          validIn: "United Kingdom",
        },
      ],
    },
  },
};
---

<Layout title={seoData.title} description={seoData.description}>
  <main class="mx-auto relative z-10">
    <section class="w-full container mx-auto px-4 sm:px-6 py-8">
      <div class="pt-8 pb-6">
        <Breadcrumb
          crumbs={[
            { href: "/about", label: "About" },
            { label: "Qualifications", current: true },
          ]}
        />
      </div>

      <!-- Header Section with Enhanced Animation -->
      <div class="text-center mb-16">
        <h1
          class="text-4xl lg:text-6xl font-bold text-brand-900 mb-6 text-balance qualifications-title"
        >
          Our Qualifications & Certifications
        </h1>
        <h2
          class="text-2xl lg:text-3xl font-semibold text-brand-700 mb-8 qualifications-subtitle"
        >
          Experienced, Qualified, and Trusted
        </h2>
        <div
          class="qualifications-intro bg-brand-50 border border-brand-200 rounded-xl p-8 shadow-sm max-w-4xl mx-auto hover:shadow-lg transition-all duration-500"
        >
          <p class="text-brand-700 text-lg leading-relaxed">
            With decades of hands-on experience, my qualifications and
            certifications ensure each job is done properly, safely, and to the
            highest standards — every time.
          </p>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 items-start gap-12">
        <!-- Qualifications Content -->
        <div class="space-y-8">
          <div>
            <h3
              class="text-2xl font-semibold text-brand-900 mb-6 qualifications-section-title"
            >
              My Qualifications
            </h3>
            <div class="space-y-6">
              <div
                class="qualification-card bg-white rounded-xl p-6 shadow-lg border border-brand-100 hover:shadow-xl transition-all duration-500"
              >
                <h4 class="font-semibold text-brand-900 mb-2">
                  NVQ Level 7 in Construction Senior Management (2025)
                </h4>
                <p class="text-brand-600">
                  The highest vocational qualification in construction
                  management, demonstrating advanced leadership and project
                  delivery skills.
                </p>
              </div>

              <div
                class="qualification-card bg-white rounded-xl p-6 shadow-lg border border-brand-100 hover:shadow-xl transition-all duration-500"
              >
                <h4 class="font-semibold text-brand-900 mb-2">
                  Advanced City & Guilds in Carpentry & Joinery – Distinction
                  (1990)
                </h4>
                <p class="text-brand-600">
                  Recognises expert craftsmanship and technical knowledge in
                  joinery.
                </p>
              </div>

              <div
                class="qualification-card bg-white rounded-xl p-6 shadow-lg border border-brand-100 hover:shadow-xl transition-all duration-500"
              >
                <h4 class="font-semibold text-brand-900 mb-2">
                  City & Guilds Craft in Carpentry & Joinery – Distinction
                  (1987–1989)
                </h4>
                <p class="text-brand-600">
                  Provides a strong foundation in practical skills and
                  woodworking excellence.
                </p>
              </div>

              <div
                class="qualification-card bg-white rounded-xl p-6 shadow-lg border border-brand-100 hover:shadow-xl transition-all duration-500"
              >
                <h4 class="font-semibold text-brand-900 mb-2">
                  CSCS Gold Card Certified – Health & Safety tested
                </h4>
                <p class="text-brand-600">
                  Proof of advanced skills and a strong commitment to site
                  safety.
                </p>
              </div>
            </div>
          </div>

          <div>
            <h3
              class="text-2xl font-semibold text-brand-900 mb-6 qualifications-section-title"
            >
              Additional Training & Certifications
            </h3>
            <p class="text-brand-600 mb-4">
              Ongoing training ensures we stay up to date with the latest safety
              standards and best practices:
            </p>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <ul class="space-y-2 text-brand-600">
                <li class="flex items-center group">
                  <div
                    class="w-4 h-4 bg-brand-100 rounded-full flex items-center justify-center mr-2 group-hover:bg-brand-200 transition-colors duration-300"
                  >
                    <svg
                      class="w-2.5 h-2.5 text-brand-600"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span
                    class="group-hover:text-brand-700 transition-colors duration-300"
                    >CITB Director's Role for Health & Safety</span
                  >
                </li>
                <li class="flex items-center group">
                  <div
                    class="w-4 h-4 bg-brand-100 rounded-full flex items-center justify-center mr-2 group-hover:bg-brand-200 transition-colors duration-300"
                  >
                    <svg
                      class="w-2.5 h-2.5 text-brand-600"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span
                    class="group-hover:text-brand-700 transition-colors duration-300"
                    >CITB Temporary Works & General Awareness</span
                  >
                </li>
                <li class="flex items-center group">
                  <div
                    class="w-4 h-4 bg-brand-100 rounded-full flex items-center justify-center mr-2 group-hover:bg-brand-200 transition-colors duration-300"
                  >
                    <svg
                      class="w-2.5 h-2.5 text-brand-600"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span
                    class="group-hover:text-brand-700 transition-colors duration-300"
                    >CITB Fire Safety in Construction</span
                  >
                </li>
                <li class="flex items-center group">
                  <div
                    class="w-4 h-4 bg-brand-100 rounded-full flex items-center justify-center mr-2 group-hover:bg-brand-200 transition-colors duration-300"
                  >
                    <svg
                      class="w-2.5 h-2.5 text-brand-600"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span
                    class="group-hover:text-brand-700 transition-colors duration-300"
                    >FireQual Fire Door Inspection</span
                  >
                </li>
              </ul>
              <ul class="space-y-2 text-brand-600">
                <li class="flex items-center group">
                  <div
                    class="w-4 h-4 bg-brand-100 rounded-full flex items-center justify-center mr-2 group-hover:bg-brand-200 transition-colors duration-300"
                  >
                    <svg
                      class="w-2.5 h-2.5 text-brand-600"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span
                    class="group-hover:text-brand-700 transition-colors duration-300"
                    >Face Fit Tested</span
                  >
                </li>
                <li class="flex items-center group">
                  <div
                    class="w-4 h-4 bg-brand-100 rounded-full flex items-center justify-center mr-2 group-hover:bg-brand-200 transition-colors duration-300"
                  >
                    <svg
                      class="w-2.5 h-2.5 text-brand-600"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span
                    class="group-hover:text-brand-700 transition-colors duration-300"
                    >Asbestos Awareness (Cat A)</span
                  >
                </li>
                <li class="flex items-center group">
                  <div
                    class="w-4 h-4 bg-brand-100 rounded-full flex items-center justify-center mr-2 group-hover:bg-brand-200 transition-colors duration-300"
                  >
                    <svg
                      class="w-2.5 h-2.5 text-brand-600"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span
                    class="group-hover:text-brand-700 transition-colors duration-300"
                    >COSHH Awareness</span
                  >
                </li>
              </ul>
            </div>
          </div>

          <div class="space-y-6">
            <div
              class="qualification-card bg-white rounded-xl p-6 shadow-lg border border-brand-100 hover:shadow-xl transition-all duration-500"
            >
              <h3 class="text-xl font-semibold text-brand-900 mb-4">
                Insurance
              </h3>
              <p class="text-brand-600">
                Fully insured for all the work we carry out — including public
                liability and employer's liability cover. This gives you
                complete peace of mind, knowing that your property and our team
                are protected at all times.
              </p>
            </div>

            <div
              class="qualification-card bg-white rounded-xl p-6 shadow-lg border border-brand-100 hover:shadow-xl transition-all duration-500"
            >
              <h3 class="text-xl font-semibold text-brand-900 mb-4">
                Risk Assessments and Method Statements (RAMS)
              </h3>
              <p class="text-brand-600 mb-4">
                Prepared and available on request for every project.
              </p>
              <p class="text-brand-600">
                These are especially relevant for our commercial customers,
                making sure all work is carried out safely and in line with
                regulations from start to finish.
              </p>
            </div>

            <div
              class="qualification-card bg-white rounded-xl p-6 shadow-lg border border-brand-100 hover:shadow-xl transition-all duration-500"
            >
              <h3 class="text-xl font-semibold text-brand-900 mb-4">
                Competent
              </h3>
              <p class="text-brand-600">
                When you work with us, you're not just hiring a contractor —
                you're getting a team that's fully qualified, personally
                committed, and chosen because they're right for the task. Every
                person on site is competent, experienced, and someone I trust
                completely.
              </p>
            </div>
          </div>

          <div
            class="qualification-card bg-brand-50 rounded-xl p-6 border border-brand-200 hover:shadow-lg transition-all duration-500"
          >
            <p class="text-brand-700">
              If you'd like to know more or see our certificates and documents,
              just
              <a
                href="/contact"
                class="font-semibold text-brand-600 hover:text-brand-700 underline transition-colors duration-300"
              >
                get in touch
              </a>. We're always happy to provide proof of qualifications and
              insurance for your peace of mind.
            </p>
          </div>
        </div>

        <!-- Certifications Images -->
        <div class="flex flex-col items-center space-y-8">
          <div
            class="certification-card bg-white rounded-xl p-8 shadow-lg border border-brand-100 text-center hover:shadow-xl transition-all duration-500 overflow-hidden"
          >
            <div class="relative overflow-hidden rounded-lg">
              <Image
                src={CITBImage}
                width={200}
                height={200}
                class="object-contain max-w-full h-auto mx-auto mb-4 transition-transform duration-700 hover:scale-110"
                alt="CITB – Construction Industry Training Board Logo"
                loading="eager"
                decoding="async"
                format="webp"
                quality={80}
              />
            </div>
            <p class="text-sm text-brand-600">
              Construction Industry Training Board
            </p>
          </div>

          <div
            class="certification-card bg-white rounded-xl p-8 shadow-lg border border-brand-100 text-center hover:shadow-xl transition-all duration-500 overflow-hidden"
          >
            <div class="relative overflow-hidden rounded-lg">
              <Image
                src={cscsGoldImage}
                width={200}
                height={200}
                class="object-contain max-w-full h-auto mx-auto mb-4 transition-transform duration-700 hover:scale-110"
                alt="CSCS Gold Card Certification Logo"
                loading="eager"
                decoding="async"
                format="webp"
                quality={80}
              />
            </div>
            <p class="text-sm text-brand-600">CSCS Gold Card Certification</p>
          </div>

          <div
            class="certification-card bg-white rounded-xl p-8 shadow-lg border border-brand-100 text-center hover:shadow-xl transition-all duration-500 overflow-hidden"
          >
            <div class="relative overflow-hidden rounded-lg">
              <Image
                src={cityAndGuildsImage}
                width={200}
                height={200}
                class="object-contain max-w-full h-auto mx-auto mb-4 transition-transform duration-700 hover:scale-110"
                alt="City & Guilds Accreditation Logo"
                loading="eager"
                decoding="async"
                format="webp"
                quality={80}
              />
            </div>
            <p class="text-sm text-brand-600">City & Guilds Accreditation</p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<!-- Enhanced Micro-Animations CSS -->
<style>
  /* Header Animations */
  .qualifications-title {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.2s forwards;
  }

  .qualifications-subtitle {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.4s forwards;
  }

  .qualifications-intro {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.6s forwards;
  }

  /* Section Titles */
  .qualifications-section-title {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .qualifications-section-title:nth-of-type(1) {
    animation-delay: 0.8s;
  }

  .qualifications-section-title:nth-of-type(2) {
    animation-delay: 1.6s;
  }

  /* Qualification Cards */
  .qualification-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .qualification-card:nth-child(1) {
    animation-delay: 1s;
  }
  .qualification-card:nth-child(2) {
    animation-delay: 1.2s;
  }
  .qualification-card:nth-child(3) {
    animation-delay: 1.4s;
  }
  .qualification-card:nth-child(4) {
    animation-delay: 1.6s;
  }
  .qualification-card:nth-child(5) {
    animation-delay: 1.8s;
  }
  .qualification-card:nth-child(6) {
    animation-delay: 2s;
  }
  .qualification-card:nth-child(7) {
    animation-delay: 2.2s;
  }
  .qualification-card:nth-child(8) {
    animation-delay: 2.4s;
  }

  .qualification-card:hover {
    transform: translateY(-5px) scale(1.02);
  }

  /* Certification Cards */
  .certification-card {
    opacity: 0;
    transform: translateY(30px) scale(0.95);
    animation: fadeInUpScale 1s ease-out forwards;
  }

  .certification-card:nth-child(1) {
    animation-delay: 1.2s;
  }
  .certification-card:nth-child(2) {
    animation-delay: 1.4s;
  }
  .certification-card:nth-child(3) {
    animation-delay: 1.6s;
  }

  .certification-card:hover {
    transform: translateY(-5px) scale(1.02);
  }

  /* Keyframe Animations */
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUpScale {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Hover Effects */
  .qualification-card:hover {
    transform: translateY(-5px) scale(1.02);
  }

  .certification-card img {
    transition: transform 0.5s ease;
  }

  .certification-card:hover img {
    transform: scale(1.1);
  }
</style>

<!-- Modern Structured Data -->
<script
  type="application/ld+json"
  set:html={JSON.stringify(seoData.structuredData)}
/>
