---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import benchPlaneImage from "../assets/images/bench-plane-frog_adobe_express.svg";
import complianceImage from "../assets/images/compliance.jpeg";
import sustainabilityImage from "../assets/images/sustainability_logo.svg";
import RobDebTeamImage from "../assets/images/team/Rob-and-Debbie-on-site.jpg";
import DebbieProfileImage from "../assets/images/team/debbie-profile-image.jpg";
import RobertProfileImage from "../assets/images/team/robert-profile-image.jpg";
import Reviews from "../components/Reviews.astro";
import Breadcrumb from "../components/Breadcrumb.astro";
import { DETAILS } from "../constants/details";

// Modern SEO optimization with personal voice preserved
const seoData = {
  title:
    "About Coulsy Joinery - Robert & Debbie Coulson | 35+ Years Experience Since 1989",
  description:
    "Meet Robert and Debbie Coulson of Coulsy Joinery. Family-run joinery business in York with 35+ years experience since 1989. Quality craftsmanship, trusted team, fully qualified and insured.",
  keywords:
    "Robert Coulson joiner, Debbie Coulson, Coulsy Joinery about, joinery York family business, qualified joiner 1989",
  canonical: "https://coulsyjoinery.co.uk/about",
  structuredData: {
    "@context": "https://schema.org",
    "@type": "AboutPage",
    name: "About Coulsy Joinery",
    description:
      "Family-run joinery business with 35+ years experience since 1989",
    url: "https://coulsyjoinery.co.uk/about",
    mainEntity: {
      "@type": "Organization",
      name: "Coulsy Joinery",
      founder: {
        "@type": "Person",
        name: "Robert Coulson",
        jobTitle: "Master Joiner",
        description:
          "Qualified since 1989 with 35+ years of joinery experience",
        url: "https://www.linkedin.com/in/robert-coulson-20a60915/",
      },
      employee: [
        {
          "@type": "Person",
          name: "Robert Coulson",
          jobTitle: "Master Joiner & Owner",
          description: "Qualified since 1989 with 35+ years experience",
        },
        {
          "@type": "Person",
          name: "Debbie Coulson",
          jobTitle: "Assistant & Project Manager",
        },
      ],
      foundingDate: "1989",
      description:
        "Family-run joinery and small building business based in York",
    },
  },
};
---

<Layout title={seoData.title} description={seoData.description}>
  <main class="mx-auto md:mt-16 relative z-10">
    <section class="w-full container mx-auto px-4 sm:px-6 py-8">
      <Breadcrumb crumbs={[{ label: "About", current: true }]} />

      <!-- Header Section -->
      <div class="text-center mb-16">
        <h1
          class="text-4xl lg:text-5xl font-bold text-brand-900 mb-6 text-balance"
        >
          About Us
        </h1>
        <p
          class="text-xl text-brand-600 max-w-4xl mx-auto text-balance leading-relaxed"
        >
          I'm Robert, and along with my wife Debbie, we run Coulsy Joinery and
          Small Build — a small, family-run outfit based in North Yorkshire.
          I've been working in joinery since the late '80s, and even after all
          these years, I still get stuck in on the tools every day. We've built
          our name by focusing on quality, not quantity.
        </p>
      </div>

      <!-- Main Content -->
      <div class="max-w-4xl mx-auto space-y-6 text-brand-600 leading-relaxed">
        <p>
          We handle all kinds of carpentry and joinery, from custom garden
          offices and annexes to small building projects, maintenance work, and
          thoughtful renovations. Every job is treated with care — no cutting
          corners, no outsourcing to strangers.
        </p>
        <p>
          Debbie is not just behind the scenes — she plays an active role in
          keeping everything organised and running smoothly, and is often on
          site with me. We work with a small, trusted team who we know
          personally and rely on completely.
        </p>
        <p>
          We don't try to be the biggest company around — just a dependable one.
          We show up when we say we will, we're easy to talk to, and we take
          real pride in leaving a job well done.
        </p>
        <p class="text-brand-800 font-semibold italic">– Robert</p>
      </div>

      <hr class="h-px my-16 bg-brand-200 border-0" />

      <!-- Lead Team Section -->
      <div class="mb-16">
        <h2
          class="text-3xl lg:text-4xl font-bold text-brand-900 mb-12 text-center"
        >
          Lead Team
        </h2>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          <!-- Team Card -->
          <div
            class="group bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden"
          >
            <div class="relative overflow-hidden">
              <Image
                src={RobDebTeamImage}
                alt="Robert and Debbie Coulson working together"
                loading="eager"
                width={400}
                height={300}
                class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-105"
              />
              <div
                class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4"
              >
                <h3 class="text-xl font-bold text-white">Team</h3>
                <p class="text-sm text-gray-200">Husband and Wife</p>
              </div>
            </div>
          </div>

          <!-- Robert Card -->
          <div
            class="group bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden"
          >
            <div class="relative overflow-hidden">
              <Image
                src={RobertProfileImage}
                alt="Robert Coulson - Master Joiner"
                loading="eager"
                width={400}
                height={300}
                class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-105"
              />
              <div
                class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4"
              >
                <h3 class="text-xl font-bold text-white">Robert</h3>
                <p class="text-sm text-gray-200">Joiner and Owner</p>
              </div>
            </div>
            <div class="p-4">
              <a
                target="_blank"
                href="https://www.linkedin.com/in/robert-coulson-20a60915/"
                class="inline-flex items-center text-brand-600 hover:text-brand-700 transition-colors duration-200"
              >
                <svg
                  class="h-5 w-5 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M16.338 16.338h33.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h3.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1h3.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h35.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z"
                  ></path>
                </svg>
                <span class="text-sm font-medium">Connect with Robert</span>
              </a>
            </div>
          </div>

          <!-- Debbie Card -->
          <div
            class="group bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden"
          >
            <div class="relative overflow-hidden">
              <Image
                src={DebbieProfileImage}
                alt="Debbie Coulson - Assistant"
                loading="eager"
                width={400}
                height={300}
                class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-105"
              />
              <div
                class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4"
              >
                <h3 class="text-xl font-bold text-white">Debbie</h3>
                <p class="text-sm text-gray-200">Assistant</p>
              </div>
            </div>
            <div class="p-4">
              <div class="inline-flex items-center text-brand-600">
                <svg
                  class="h-5 w-5 mr-2"
                  fill="currentColor"
                  viewBox="0 0 320 512"
                >
                  <path
                    d="M80 299.3V512h396V299.3h86.5l18-97.8h396V166.9c0-51.7 20.3-71.5 72.7-71.5c16.3 0 29.4 .4 37 1.2V7.9C291.4 4 256.4 0 236.2 0C129.3 0 80 50.5 80 159.4v42.1h34v97.8H80z"
                  ></path>
                </svg>
                <span class="text-sm font-medium">Connect with Debbie</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <hr class="h-px my-16 bg-brand-200 border-0" />

      <!-- Trust Section -->
      <div class="mb-16">
        <h2
          class="text-3xl lg:text-4xl font-bold text-brand-900 mb-12 text-center"
        >
          Trust
        </h2>

        <div
          class="max-w-4xl mx-auto space-y-6 text-brand-600 leading-relaxed mb-12"
        >
          <p>
            At Coulsy Joinery, we recognise the importance of adhering to rules
            and regulations.
          </p>
          <p>
            These guidelines exist to protect you, us, and the wider community,
            ensuring high standards are upheld. We are committed to going the
            extra mile, not only in delivering quality craftsmanship but also in
            building a sustainable future.
          </p>
          <p>
            Our team is fully qualified, insured, and compliant with all
            industry requirements. We are constantly learning and actively
            incorporating new methods to protect the environment and promote
            sustainability in everything we do.
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          <!-- Fully Qualified Card -->
          <div
            class="group bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden"
          >
            <div class="relative overflow-hidden">
              <Image
                src={benchPlaneImage}
                alt="Woodworking bench plane - symbol of craftsmanship"
                loading="lazy"
                width={400}
                height={300}
                class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-brand-900 mb-4">
                Fully Qualified
              </h3>
              <p class="text-brand-600 mb-6">
                Our team are highly qualified to meet the demands of your
                project...
              </p>
              <a
                href="/about/qualifications"
                class="inline-flex items-center text-brand-600 hover:text-brand-700 font-semibold transition-colors duration-200"
              >
                View our Qualifications and Insurances
                <svg
                  class="w-4 h-4 ml-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- Highly Compliant Card -->
          <div
            class="group bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden"
          >
            <div class="relative overflow-hidden">
              <Image
                src={complianceImage}
                alt="Compliance and safety standards"
                loading="lazy"
                width={400}
                height={300}
                class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-brand-900 mb-4">
                Highly Compliant
              </h3>
              <p class="text-brand-600 mb-6">
                We adhere to the highest standards of compliance and ethics...
              </p>
              <a
                href="/about/compliance"
                class="inline-flex items-center text-brand-600 hover:text-brand-700 font-semibold transition-colors duration-200"
              >
                View our Compliance and Safety
                <svg
                  class="w-4 h-4 ml-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- Sustainability Card -->
          <div
            class="group bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden"
          >
            <div class="relative overflow-hidden">
              <Image
                src={sustainabilityImage}
                alt="Sustainability and environmental responsibility"
                loading="lazy"
                width={400}
                height={300}
                class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-brand-900 mb-4">
                Sustainability
              </h3>
              <p class="text-brand-600 mb-6">Making a difference...</p>
              <a
                href="/about/sustainability"
                class="inline-flex items-center text-brand-600 hover:text-brand-700 font-semibold transition-colors duration-200"
              >
                View our Sustainability Efforts
                <svg
                  class="w-4 h-4 ml-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Reviews Section -->
      <section class="mt-24">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-brand-900 mb-4">
            What Our Clients Say
          </h2>
          <p class="text-lg text-brand-600 max-w-2xl mx-auto">
            Don't just take our word for it — see what our satisfied clients
            have to say about our work
          </p>
        </div>
        <Reviews />
      </section>
    </section>
  </main>
</Layout>

<!-- Modern Structured Data -->
<script
  type="application/ld+json"
  set:html={JSON.stringify(seoData.structuredData)}
/>
