---
import Layout from "../layouts/Layout.astro";
import ModernContactForm from "../components/ModernContactForm.astro";
import OfficeIcon from "../icons/OfficeIcon.astro";
import CardChecklist from "../icons/CardChecklist.astro";
import EnvelopeIcon from "../icons/EnvelopeIcon.astro";
import PhoneIcon from "../icons/PhoneIcon.astro";
import Reviews from "../components/Reviews.astro";
import { DETAILS } from "../constants/details";

// Modern SEO optimization with personal voice preserved
const seoData = {
  title:
    "Contact Robert Coulson - Let's Talk About Your Joinery Project in York",
  description:
    "Ready to start your joinery project? I'm Robert Coulson, and I'd love to hear about what you have in mind. 35+ years of experience, free consultations, and a personal touch that makes the difference.",
  keywords:
    "contact Robert Coulson York, joinery consultation York, kitchen fitting York, bespoke joinery York, personal joinery service",
  canonical: "https://coulsyjoinery.co.uk/contact",
  structuredData: {
    "@context": "https://schema.org",
    "@type": "ContactPage",
    name: "Contact Robert Coulson - Coulsy Joinery",
    description:
      "Contact Robert Coulson for expert joinery services in York with 35+ years experience",
    url: "https://coulsyjoinery.co.uk/contact",
    mainEntity: {
      "@type": "Organization",
      name: "Coulsy Joinery",
      telephone: DETAILS.PHONE,
      email: DETAILS.EMAIL,
      address: {
        "@type": "PostalAddress",
        streetAddress: `${DETAILS.ADDRESS.LINE_1}, ${DETAILS.ADDRESS.LINE_2}`,
        addressLocality: DETAILS.ADDRESS.TOWN,
        addressRegion: DETAILS.ADDRESS.COUNTY,
        postalCode: DETAILS.ADDRESS.POSTCODE,
        addressCountry: "GB",
      },
      contactPoint: {
        "@type": "ContactPoint",
        telephone: DETAILS.PHONE,
        contactType: "customer service",
        availableLanguage: "English",
      },
    },
  },
};
---

<Layout
  title={seoData.title}
  description={seoData.description}
  classes="mt-8 mb-16"
>
  <div class="container mx-auto px-4 py-16 lg:py-24">
    <!-- Personal Header Section -->
    <div class="text-center mb-16 animate-fade-in">
      <h1
        class="text-4xl lg:text-5xl font-bold text-brand-900 mb-6 text-balance animate-slide-up"
      >
        Let's Talk About Your Project
      </h1>
      <p
        class="text-xl text-brand-600 max-w-3xl mx-auto text-balance mb-4 animate-slide-up"
        style="animation-delay: 0.2s"
      >
        Hi, I'm Robert. Whether you're planning a kitchen renovation, need some
        bespoke joinery, or just want to chat about your ideas, I'm here to
        help.
      </p>
      <p
        class="text-lg text-brand-600 max-w-2xl mx-auto animate-slide-up"
        style="animation-delay: 0.4s"
      >
        After 35+ years in the trade, I've learned that the best projects start
        with a good conversation. No pressure, no obligation — just honest
        advice from someone who loves what they do.
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-12">
      <!-- Contact Form Section -->
      <div class="lg:col-span-2 animate-slide-up" style="animation-delay: 0.6s">
        <ModernContactForm
          title="Tell Me About Your Project"
          subtitle="What's on your mind? Whether it's a quick question or a full project plan, I'd love to hear from you."
        />
        <div class="mt-6 text-center space-y-3">
          <p class="text-brand-600">
            Prefer to chat? I'm always happy to talk things through on the
            phone.
          </p>
          <p class="text-sm text-brand-500">
            I usually respond within a few hours during business days.
          </p>
        </div>
      </div>

      <!-- Contact Information Section -->
      <div class="space-y-6">
        <!-- Personal Contact Details -->
        <div
          class="bg-white rounded-xl shadow-lg p-8 border border-brand-100 transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1 animate-slide-up"
          style="animation-delay: 0.8s"
        >
          <div class="flex items-center mb-4">
            <OfficeIcon className="h-6 w-6 text-brand-600" />
            <h3 class="text-xl font-semibold text-brand-900 ml-3">
              Where to Find Me
            </h3>
          </div>

          <div class="space-y-4">
            <div class="flex items-start group">
              <div
                class="flex-shrink-0 w-6 h-6 bg-brand-100 rounded-full flex items-center justify-center mr-3 mt-0.5 group-hover:bg-brand-200 transition-colors duration-200"
              >
                <svg
                  class="w-3 h-3 text-brand-600"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <address
                class="text-brand-600 not-italic group-hover:text-brand-700 transition-colors duration-200"
              >
                {DETAILS.ADDRESS.LINE_1}<br />
                {DETAILS.ADDRESS.LINE_2}<br />
                {DETAILS.ADDRESS.TOWN}<br />
                {DETAILS.ADDRESS.COUNTY}<br />
                {DETAILS.ADDRESS.POSTCODE}
              </address>
            </div>

            <div class="flex items-center group">
              <PhoneIcon
                className="h-5 w-5 text-brand-600 mr-3 group-hover:text-brand-700 transition-colors duration-200"
              />
              <a
                href={`tel:${DETAILS.PHONE}`}
                class="text-brand-600 hover:text-brand-700 transition-colors duration-200 font-medium group-hover:underline"
              >
                {DETAILS.PHONE}
              </a>
            </div>

            <div class="flex items-center group">
              <EnvelopeIcon
                className="h-5 w-5 text-brand-600 mr-3 group-hover:text-brand-700 transition-colors duration-200"
              />
              <a
                href={`mailto:${DETAILS.EMAIL}`}
                class="text-brand-600 hover:text-brand-700 transition-colors duration-200 font-medium group-hover:underline"
              >
                {DETAILS.EMAIL}
              </a>
            </div>
          </div>
        </div>

        <!-- Personal Touch Section -->
        <div
          class="bg-gradient-to-br from-brand-50 to-yellow-50 rounded-xl shadow-lg p-8 border border-brand-100 transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1 animate-slide-up"
          style="animation-delay: 1s"
        >
          <h3 class="text-xl font-semibold text-brand-900 mb-4">
            Why Choose Me?
          </h3>
          <div class="space-y-4 text-sm text-brand-700">
            <div class="flex items-start group">
              <div
                class="flex-shrink-0 w-2 h-2 bg-brand-600 rounded-full mt-2 mr-3 group-hover:bg-brand-700 transition-colors duration-200"
              >
              </div>
              <p
                class="group-hover:text-brand-800 transition-colors duration-200"
              >
                <strong>Personal service:</strong> You'll deal directly with me,
                not a sales team
              </p>
            </div>
            <div class="flex items-start group">
              <div
                class="flex-shrink-0 w-2 h-2 bg-brand-600 rounded-full mt-2 mr-3 group-hover:bg-brand-700 transition-colors duration-200"
              >
              </div>
              <p
                class="group-hover:text-brand-800 transition-colors duration-200"
              >
                <strong>35+ years experience:</strong> I've seen it all and can guide
                you through any challenge
              </p>
            </div>
            <div class="flex items-start group">
              <div
                class="flex-shrink-0 w-2 h-2 bg-brand-600 rounded-full mt-2 mr-3 group-hover:bg-brand-700 transition-colors duration-200"
              >
              </div>
              <p
                class="group-hover:text-brand-800 transition-colors duration-200"
              >
                <strong>Local knowledge:</strong> I know York and the surrounding
                areas inside out
              </p>
            </div>
            <div class="flex items-start group">
              <div
                class="flex-shrink-0 w-2 h-2 bg-brand-600 rounded-full mt-2 mr-3 group-hover:bg-brand-700 transition-colors duration-200"
              >
              </div>
              <p
                class="group-hover:text-brand-800 transition-colors duration-200"
              >
                <strong>No pressure:</strong> Honest advice, whether it's right for
                you or not
              </p>
            </div>
          </div>
        </div>

        <!-- Company Details -->
        <div
          class="bg-white rounded-xl shadow-lg p-8 border border-brand-100 transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1 animate-slide-up"
          style="animation-delay: 1.2s"
        >
          <h3 class="text-xl font-semibold text-brand-900 mb-4">
            Business Details
          </h3>
          <p class="text-sm text-brand-600 mb-6">
            For your peace of mind — we're fully registered and insured.
          </p>

          <div class="space-y-4">
            <div class="flex items-center group">
              <CardChecklist
                className="h-5 w-5 text-brand-600 mr-3 group-hover:text-brand-700 transition-colors duration-200"
              />
              <div>
                <span class="text-sm font-medium text-brand-900"
                  >Registered Company:</span
                >
                <p
                  class="text-sm text-brand-600 group-hover:text-brand-700 transition-colors duration-200"
                >
                  {DETAILS.COMPANY.NAME}
                </p>
              </div>
            </div>

            <div class="flex items-center group">
              <CardChecklist
                className="h-5 w-5 text-brand-600 mr-3 group-hover:text-brand-700 transition-colors duration-200"
              />
              <div>
                <span class="text-sm font-medium text-brand-900"
                  >Company number:</span
                >
                <p
                  class="text-sm text-brand-600 group-hover:text-brand-700 transition-colors duration-200"
                >
                  {DETAILS.COMPANY.REGISTRATION_NUMBER}
                </p>
              </div>
            </div>

            <div class="flex items-center group">
              <CardChecklist
                className="h-5 w-5 text-brand-600 mr-3 group-hover:text-brand-700 transition-colors duration-200"
              />
              <div>
                <span class="text-sm font-medium text-brand-900"
                  >Trading since:</span
                >
                <p
                  class="text-sm text-brand-600 group-hover:text-brand-700 transition-colors duration-200"
                >
                  {DETAILS.COMPANY.SINCE}
                </p>
              </div>
            </div>

            <div class="flex items-center group">
              <CardChecklist
                className="h-5 w-5 text-brand-600 mr-3 group-hover:text-brand-700 transition-colors duration-200"
              />
              <div>
                <span class="text-sm font-medium text-brand-900"
                  >VAT registered:</span
                >
                <p
                  class="text-sm text-brand-600 group-hover:text-brand-700 transition-colors duration-200"
                >
                  Available on request
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Personal Call to Action -->
    <div
      class="mt-16 text-center bg-gradient-to-r from-brand-50 to-yellow-50 rounded-2xl p-8 border border-brand-100 transform transition-all duration-300 hover:shadow-xl animate-slide-up"
      style="animation-delay: 1.4s"
    >
      <h2 class="text-2xl font-bold text-brand-900 mb-4">
        Ready to Get Started?
      </h2>
      <p class="text-lg text-brand-600 mb-6 max-w-2xl mx-auto">
        Whether you have a clear vision or just a rough idea, I'm here to help
        bring your project to life. Let's have a chat and see what we can create
        together.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={`tel:${DETAILS.PHONE}`}
          class="inline-flex items-center justify-center px-6 py-3 bg-brand-600 text-white font-semibold rounded-lg hover:bg-brand-700 transition-all duration-300 transform hover:scale-105 hover:shadow-lg"
        >
          <PhoneIcon className="h-5 w-5 mr-2" />
          Call Me Now
        </a>
        <a
          href={`mailto:${DETAILS.EMAIL}`}
          class="inline-flex items-center justify-center px-6 py-3 border-2 border-brand-600 text-brand-600 font-semibold rounded-lg hover:bg-brand-600 hover:text-white transition-all duration-300 transform hover:scale-105 hover:shadow-lg"
        >
          <EnvelopeIcon className="h-5 w-5 mr-2" />
          Send Email
        </a>
      </div>
    </div>

    <!-- Reviews Section -->
    <section class="mt-24 animate-slide-up" style="animation-delay: 1.6s">
      <Reviews />
    </section>
  </div>
</Layout>

<style>
  /* Custom animations for contact page */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out;
  }

  .animate-slide-up {
    animation: slideUp 0.6s ease-out forwards;
    opacity: 0;
  }

  /* Hover effects for contact cards */
  .group:hover .group-hover\:bg-brand-200 {
    background-color: rgb(254 243 199);
  }

  .group:hover .group-hover\:text-brand-700 {
    color: rgb(180 83 9);
  }

  .group:hover .group-hover\:text-brand-800 {
    color: rgb(146 64 14);
  }

  .group:hover .group-hover\:underline {
    text-decoration: underline;
  }
</style>

<!-- Modern Structured Data -->
<script
  type="application/ld+json"
  set:html={JSON.stringify(seoData.structuredData)}
/>
