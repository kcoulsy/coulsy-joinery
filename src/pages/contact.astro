---
import Layout from "../layouts/Layout.astro";
import ModernContactForm from "../components/ModernContactForm.astro";
import OfficeIcon from "../icons/OfficeIcon.astro";
import CardChecklist from "../icons/CardChecklist.astro";
import EnvelopeIcon from "../icons/EnvelopeIcon.astro";
import PhoneIcon from "../icons/PhoneIcon.astro";
import Reviews from "../components/Reviews.astro";
import { DETAILS } from "../constants/details";

// Modern SEO optimization with personal voice preserved
const seoData = {
  title:
    "Contact Coulsy Joinery - Expert Joinery Services in York | Free Quotes",
  description:
    "Contact Robert Coulson for expert joinery services in York. 35+ years experience since 1989. Free consultations and quotes for bespoke joinery, kitchens, and building works.",
  keywords:
    "contact joinery York, Robert Coulson joiner, joinery quote York, kitchen installation York, bespoke joinery contact",
  canonical: "https://coulsyjoinery.co.uk/contact",
  structuredData: {
    "@context": "https://schema.org",
    "@type": "ContactPage",
    name: "Contact Coulsy Joinery",
    description:
      "Contact Robert Coulson for expert joinery services in York with 35+ years experience",
    url: "https://coulsyjoinery.co.uk/contact",
    mainEntity: {
      "@type": "Organization",
      name: "Coulsy Joinery",
      telephone: DETAILS.PHONE,
      email: DETAILS.EMAIL,
      address: {
        "@type": "PostalAddress",
        streetAddress: `${DETAILS.ADDRESS.LINE_1}, ${DETAILS.ADDRESS.LINE_2}`,
        addressLocality: DETAILS.ADDRESS.TOWN,
        addressRegion: DETAILS.ADDRESS.COUNTY,
        postalCode: DETAILS.ADDRESS.POSTCODE,
        addressCountry: "GB",
      },
      contactPoint: {
        "@type": "ContactPoint",
        telephone: DETAILS.PHONE,
        contactType: "customer service",
        availableLanguage: "English",
      },
    },
  },
};
---

<Layout
  title={seoData.title}
  description={seoData.description}
  classes="mt-8 mb-16"
>
  <div class="container mx-auto px-4 py-16 lg:py-24">
    <!-- Header Section -->
    <div class="text-center mb-16">
      <h1
        class="text-4xl lg:text-5xl font-bold text-brand-900 mb-6 text-balance"
      >
        Contact a Trusted York-Based Joinery Business
      </h1>
      <p class="text-xl text-brand-600 max-w-3xl mx-auto text-balance">
        Let's talk about your project — from small repairs to full renovations,
        I'd be happy to help.
      </p>
      <p class="text-lg text-brand-600 mt-4">
        We always look forward to hearing from you and being able to assist
        where we can.
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-12">
      <!-- Contact Form Section -->
      <div class="lg:col-span-2">
        <ModernContactForm
          title="Get in Touch"
          subtitle="Ready to discuss your project? Get in touch for a free, no-obligation quote."
        />
        <p class="mt-6 text-center text-brand-600">
          Prefer to chat directly? Give me a ring — I'm happy to talk things
          through.
        </p>
      </div>

      <!-- Contact Information Section -->
      <div class="space-y-6">
        <!-- Office Details -->
        <div class="bg-white rounded-xl shadow-lg p-8 border border-brand-100">
          <div class="flex items-center mb-4">
            <OfficeIcon className="h-6 w-6 text-brand-600" />
            <h3 class="text-xl font-semibold text-brand-900 ml-3">Office</h3>
          </div>

          <div class="space-y-4">
            <div class="flex items-start">
              <div
                class="flex-shrink-0 w-6 h-6 bg-brand-100 rounded-full flex items-center justify-center mr-3 mt-0.5"
              >
                <svg
                  class="w-3 h-3 text-brand-600"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <address class="text-brand-600 not-italic">
                {DETAILS.ADDRESS.LINE_1}<br />
                {DETAILS.ADDRESS.LINE_2}<br />
                {DETAILS.ADDRESS.TOWN}<br />
                {DETAILS.ADDRESS.COUNTY}<br />
                {DETAILS.ADDRESS.POSTCODE}
              </address>
            </div>

            <div class="flex items-center">
              <PhoneIcon className="h-5 w-5 text-brand-600 mr-3" />
              <a
                href={`tel:${DETAILS.PHONE}`}
                class="text-brand-600 hover:text-brand-700 transition-colors duration-200"
              >
                {DETAILS.PHONE}
              </a>
            </div>

            <div class="flex items-center">
              <EnvelopeIcon className="h-5 w-5 text-brand-600 mr-3" />
              <a
                href={`mailto:${DETAILS.EMAIL}`}
                class="text-brand-600 hover:text-brand-700 transition-colors duration-200"
              >
                {DETAILS.EMAIL}
              </a>
            </div>
          </div>
        </div>

        <!-- Company Details -->
        <div class="bg-white rounded-xl shadow-lg p-8 border border-brand-100">
          <h3 class="text-xl font-semibold text-brand-900 mb-4">
            Company details
          </h3>
          <p class="text-sm text-brand-600 mb-6">
            Rest assured by knowing who we are.
          </p>

          <div class="space-y-4">
            <div class="flex items-center">
              <CardChecklist className="h-5 w-5 text-brand-600 mr-3" />
              <div>
                <span class="text-sm font-medium text-brand-900"
                  >Registered Company:</span
                >
                <p class="text-sm text-brand-600">{DETAILS.COMPANY.NAME}</p>
              </div>
            </div>

            <div class="flex items-center">
              <CardChecklist className="h-5 w-5 text-brand-600 mr-3" />
              <div>
                <span class="text-sm font-medium text-brand-900"
                  >Company number:</span
                >
                <p class="text-sm text-brand-600">
                  {DETAILS.COMPANY.REGISTRATION_NUMBER}
                </p>
              </div>
            </div>

            <div class="flex items-center">
              <CardChecklist className="h-5 w-5 text-brand-600 mr-3" />
              <div>
                <span class="text-sm font-medium text-brand-900"
                  >Commenced trading:</span
                >
                <p class="text-sm text-brand-600">{DETAILS.COMPANY.SINCE}</p>
              </div>
            </div>

            <div class="flex items-center">
              <CardChecklist className="h-5 w-5 text-brand-600 mr-3" />
              <div>
                <span class="text-sm font-medium text-brand-900"
                  >VAT registered:</span
                >
                <p class="text-sm text-brand-600">upon request</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Reviews Section -->
    <section class="mt-24">
      <Reviews />
    </section>
  </div>
</Layout>

<!-- Modern Structured Data -->
<script
  type="application/ld+json"
  set:html={JSON.stringify(seoData.structuredData)}
/>
