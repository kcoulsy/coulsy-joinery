---
import type { GetStaticPaths } from "astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import {
  getAllLocations,
  generateLocationSEO,
  getOptimizedNearbyLocations,
  type EnhancedLocation,
} from "../../utils/locationManager";
import Layout from "../../layouts/Layout.astro";
import Breadcrumb from "../../components/Breadcrumb.astro";
import ModernContactForm from "../../components/ModernContactForm.astro";
import GalleryGrid from "../../components/GalleryGrid.astro";
import ReviewsLinkSection from "../../components/ReviewsLinkSection.astro";

export const getStaticPaths: GetStaticPaths = async () => {
  const locations = await getAllLocations();
  const services = await getCollection("services");

  const paths: Array<{
    params: { location: string; service: string };
    props: {
      location: EnhancedLocation;
      service: CollectionEntry<"services">["data"];
      nearbyLocations: EnhancedLocation[];
    };
  }> = [];

  for (const location of locations) {
    for (const service of services) {
      // Only generate paths for locations that offer this service
      if (location.services.includes(service.data.slug)) {
        const nearbyLocations = await getOptimizedNearbyLocations(
          location.slug,
          service.data.slug,
          8
        );

        paths.push({
          params: {
            location: location.slug,
            service: service.data.slug,
          },
          props: {
            location,
            service: service.data,
            nearbyLocations,
          },
        });
      }
    }
  }

  return paths;
};

const { location, service, nearbyLocations } = Astro.props as {
  location: EnhancedLocation;
  service: CollectionEntry<"services">["data"];
  nearbyLocations: EnhancedLocation[];
};

// Generate SEO data
const { title, description, structuredData } = await generateLocationSEO(
  location.slug,
  service.slug
);

// Get service-specific images
const serviceImages = service.gallery || [];
---

<Layout title={title} description={description}>
  <Fragment slot="head">
    <script
      type="application/ld+json"
      set:html={JSON.stringify(structuredData)}
    />
  </Fragment>

  <main class="mx-auto md:mt-16 relative z-10">
    <section class="w-full container mx-auto px-4 sm:px-6 py-8">
      <Breadcrumb
        crumbs={[
          { label: "Joinery Services", href: "/joinery-services" },
          { label: service.title, href: `/joinery-services/${service.slug}` },
          { label: location.name, current: true },
        ]}
      />

      <!-- Hero Section -->
      <div
        class="bg-yellow-50 border border-yellow-200 rounded-xl p-6 mb-10 shadow-sm text-center"
      >
        <h1 class="text-3xl font-bold tracking-tight pb-4">
          {service.title} in {location.name}, {location.county}
        </h1>
        <p class="text-gray-700 text-lg mb-4">
          Professional {service.title.toLowerCase()} services delivered by experienced
          joiners with over 30 years' expertise in {location.name} and surrounding
          areas.
        </p>
        <p class="text-gray-700 text-base mb-6">
          From initial consultation to final handover, we provide reliable,
          high-quality workmanship with personal service you can trust.
        </p>
        <a
          href="/contact"
          class="inline-block bg-yellow-600 text-white font-semibold px-6 py-3 rounded-full shadow hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-yellow-500 transition"
        >
          Get Your Free Quote
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 items-start gap-8">
        <!-- Main Content -->
        <div class="space-y-4 text-gray-600 prose">
          <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-4">
            {service.title} Services in {location.name}
          </h2>

          <div set:html={service.description} />

          <!-- Service Features -->
          {
            service.certifications && service.certifications.length > 0 && (
              <div class="mt-8">
                <h3 class="text-xl font-semibold text-gray-800 mb-4">
                  Certifications & Standards
                </h3>
                <ul class="list-disc list-inside space-y-2">
                  {service.certifications.map((cert: string) => (
                    <li class="text-gray-700">{cert}</li>
                  ))}
                </ul>
              </div>
            )
          }

          <!-- Why Choose Us -->
          <div class="mt-8">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">
              Why Choose Coulsy Joinery in {location.name}
            </h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div class="bg-white p-4 rounded-lg border">
                <h4 class="font-semibold text-gray-800">Local Expertise</h4>
                <p class="text-sm text-gray-600">
                  Deep knowledge of {location.name} and surrounding areas
                </p>
              </div>
              <div class="bg-white p-4 rounded-lg border">
                <h4 class="font-semibold text-gray-800">
                  30+ Years Experience
                </h4>
                <p class="text-sm text-gray-600">
                  Proven track record of quality workmanship
                </p>
              </div>
              <div class="bg-white p-4 rounded-lg border">
                <h4 class="font-semibold text-gray-800">Personal Service</h4>
                <p class="text-sm text-gray-600">
                  Direct communication with the joiner, no middlemen
                </p>
              </div>
              <div class="bg-white p-4 rounded-lg border">
                <h4 class="font-semibold text-gray-800">Free Quotes</h4>
                <p class="text-sm text-gray-600">
                  No-obligation estimates for all projects
                </p>
              </div>
            </div>
          </div>

          <ReviewsLinkSection />
        </div>

        <!-- Sidebar -->
        <aside class="w-full flex flex-col items-stretch gap-6">
          <!-- Gallery -->
          {
            serviceImages.length > 0 && (
              <div class="w-full">
                <GalleryGrid
                  items={serviceImages.map((image: string, index: number) => ({
                    src: image,
                    alt: `${service.title} in ${location.name} - Example ${index + 1}`,
                    label: `${service.title} Project`,
                    loading: index > 2 ? "lazy" : "eager",
                  }))}
                />
              </div>
            )
          }

          <!-- Contact Form -->
          <div class="w-full">
            <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md">
              <h2
                class="text-xl sm:text-2xl font-bold mb-4 text-gray-800 text-center"
              >
                Get Your Free Quote
              </h2>
              <p class="text-gray-600 mb-6 text-center">
                Ready to start your {service.title.toLowerCase()} project in {
                  location.name
                }? Get in touch for a free, no-obligation quote.
              </p>
              <ModernContactForm
                title="Get Your Free Quote"
                subtitle={`Ready to start your ${service.title.toLowerCase()} project in ${location.name}?`}
              />
            </div>
          </div>
        </aside>
      </div>

      <!-- Nearby Areas -->
      {
        nearbyLocations.length > 0 && (
          <div class="mt-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">
              {service.title} Services Near {location.name}
            </h2>
            <p class="text-gray-600 text-center mb-8 max-w-2xl mx-auto">
              We provide {service.title.toLowerCase()} services across{" "}
              {location.county} and surrounding areas. Here are some of the
              locations we serve:
            </p>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
              {nearbyLocations.map((nearbyLocation) => (
                <a
                  href={`/joinery-services/${nearbyLocation.slug}-${service.slug}`}
                  class="group rounded-lg bg-white p-3 shadow-sm border border-gray-200 transition hover:shadow-md hover:bg-yellow-50 text-center"
                >
                  <div class="text-sm font-medium text-gray-800 group-hover:text-yellow-700">
                    {nearbyLocation.name}
                  </div>
                  {nearbyLocation.distance && (
                    <div class="text-xs text-gray-500 mt-1">
                      {Math.round(nearbyLocation.distance)} miles
                    </div>
                  )}
                </a>
              ))}
            </div>
          </div>
        )
      }

      <p class="text-sm text-gray-600 text-center mt-10">
        Looking for reliable {service.title.toLowerCase()} services in {
          location.name
        }, {location.county}? Contact Coulsy Joinery for professional
        workmanship and personal service.
      </p>
    </section>
  </main>
</Layout>
