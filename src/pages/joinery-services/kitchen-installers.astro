---
import Layout from "../../layouts/Layout.astro";
import Breadcrumb from "../../components/Breadcrumb.astro";
import ContactForm from "../../components/ContactForm.astro";
import { getFormattedPageData } from "../../utils/pageMeta";
import ReviewsLinkSection from "../../components/ReviewsLinkSection.astro";

// import NearbyAreas from "../../components/NearbyAreasList.astro";
import NearbyAreas from "../../components/NearbyAreasKitchenInstallers.astro"; // this location is unique a specific for the service offered !! CHECK

import GalleryGrid from "../../components/GalleryGrid.astro";
import galleryImg1 from "../../assets/images/kitchens/kitchen-fitter-domestic.jpg";
import galleryImg2 from "../../assets/images/kitchens/kitchen-commercial.jpg";
import galleryImg3 from "../../assets/images/kitchens/Kitchen-fitter4.jpg";
import galleryImg4 from "../../assets/images/accessible-kitchens/accessible-kitchen-main.jpg";
import galleryImg5 from "../../assets/images/kitchens/birkby-kitchen.jpg";
import galleryImg6 from "../../assets/images/kitchens/kitchen-fitter2.jpg";

import { Image } from "astro:assets";
import howdensLogo from "../../assets/images/logos/howdens-logo.png";
import magnetLogo from "../../assets/images/logos/magnet-logo.png";
import diyKitchensLogo from "../../assets/images/logos/diy-kitchens-logo.png";

const {
  formattedServiceName,
  locationInText,
  businessSchema,
  defaultDescription,
} = getFormattedPageData(Astro);

const description = `Professional kitchen fitting and joinery services ${locationInText}, delivered personally by a qualified joiner with 30+ years’ experience. From bespoke domestic kitchens to commercial installations — fitted properly, with care.`;
const finalDescription = description || defaultDescription;
---

<Layout
  title={`${formattedServiceName} ${locationInText} | Experienced Kitchen Installer & Fitter for Domestic & Trade Projects`}
  description={finalDescription}
>
  <Fragment slot="head">
    <script
      type="application/ld+json"
      set:html={JSON.stringify(businessSchema)}
    />
  </Fragment>

  <main class="mx-auto md:mt-16 relative z-10">
    <section class="w-full container mx-auto px-4 sm:px-6 py-8">
      <Breadcrumb
        crumbs={[
          { label: "Joinery Services", href: "/joinery-services" },
          { label: formattedServiceName, current: true },
        ]}
      />
      <div
        class="bg-yellow-50 border border-yellow-200 rounded-xl p-6 mb-10 shadow-sm text-center"
      >
        <h1 class="text-3xl font-bold tracking-tight pb-4">
          {formattedServiceName}
          {
            locationInText
              .trim()
              .replace(/-/g, " ")
              .replace(/\b\w/g, (c) => c.toUpperCase())
          }
        </h1>
        <p class="text-gray-700 text-lg mb-4">
          I’m Robert, the owner and joiner behind Coulsy Joinery. When you work
          with me, you’re getting more than a kitchen fitter — you’re getting
          personal, expert service from the first conversation to the final
          handover.
        </p>
        <p class="text-gray-700 text-base">
          Whether you're in need of a local kitchen fitter, a full kitchen
          renovation, or a professional joiner to install trade-supplied
          kitchens from Howdens or Magnet – I'm here to deliver high quality,
          efficient, and reliable service every time.
        </p>
        <a
          href="/contact"
          class="inline-block bg-yellow-600 text-white font-semibold px-6 py-3 rounded-full shadow hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-yellow-500 transition"
        >
          Get in Touch About Your Kitchen
        </a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 items-start gap-8">
        <div class="space-y-4 text-gray-600 prose">
          <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-4">
            Local Kitchen Fitting {locationInText} with a Joiner You Can Trust
          </h2>
          <p>
            I’m Robert — a qualified joiner with over 30 years of experience
            fitting kitchens {locationInText}. I personally handle everything
            from the first measurement to the final handover. No middlemen, no
            fuss — just a reliable job done right.
          </p>
          <p>
            Whether it’s your home, a rental property, or a commercial kitchen,
            I bring the same care and precision to every fit. I’ve worked on
            everything from one-off domestic kitchens to multi-unit housing
            developments and trade-supplied kitchen installs.
          </p>

          <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mt-8 mb-4">
            Fitting Kitchens from All Major Brands
          </h2>
          <p>
            I fit kitchens from Howdens, Magnet, DIY Kitchens, and others —
            always to a high standard. Whether you’ve already got your kitchen
            ready or need help choosing the right setup, I’ll make sure it’s
            measured, installed, and finished properly.
          </p>
          <div class="flex items-center gap-4 mt-2">
            <Image
              src={howdensLogo}
              alt="Howdens Joinery Logo"
              width={100}
              height={40}
              class="h-8 w-auto"
              loading="lazy"
            />
            <Image
              src={magnetLogo}
              alt="Magnet Kitchens Logo"
              width={100}
              height={40}
              class="h-8 w-auto"
              loading="lazy"
            />
            <Image
              src={diyKitchensLogo}
              alt="DIY Kitchens Logo"
              width={100}
              height={40}
              class="h-8 w-auto"
              loading="lazy"
            />
          </div>

          <h3 class="text-lg font-semibold text-gray-700 mt-4">
            Domestic Kitchen Fitting
          </h3>
          <p>
            I fit kitchens in homes {locationInText} — whether it’s a fresh renovation
            or part of a new build. You get a clean, precise finish every time.
          </p>

          <h3 class="text-lg font-semibold text-gray-700 mt-4">
            Commercial Installations
          </h3>
          <p>
            I also fit kitchens for offices, retail units, and hospitality
            spaces {locationInText}. Always on time and built to last.
          </p>

          <h3 class="text-lg font-semibold text-gray-700 mt-4">
            Accessible Kitchens
          </h3>
          <p>
            I can adapt kitchens for wheelchair users or reduced mobility — with
            safety, comfort, and independence in mind.
          </p>
          <p>
            <a
              href="/joinery-services/accessible-kitchen-installers"
              class="font-semibold text-blue-700 hover:underline"
            >
              Explore Accessible Options
            </a>
          </p>

          <h2 class="text-2xl sm:text-3xl font-bold text-blue-800 mt-10 mb-4">
            Why Choose Me for Your Kitchen Installation {locationInText}?
          </h2>
          <p>
            As the person who will actually be carrying out the work, you get
            direct communication and consistent quality. I don’t cut corners,
            and I treat your space with respect — everything covered and cleaned
            before I leave.
          </p>

          <h3 class="text-lg font-semibold text-gray-700 mt-4">Dependable</h3>
          <p>
            From start to finish, I’ll keep things running smoothly — turning up
            when I say and getting it done to a high standard.
          </p>

          <h3 class="text-lg font-semibold text-gray-700 mt-4">Experienced</h3>
          <p>
            With three decades of hands-on experience, I bring joinery skill and
            kitchen-fitting know-how that makes a difference.
          </p>

          <h3 class="text-lg font-semibold text-gray-700 mt-4">
            Trusted Locally
          </h3>
          <p>
            Many of my kitchen projects {locationInText} come from word of mouth.
            I take pride in that, and I work hard to keep it that way.
          </p>

          <h2 class="text-xl sm:text-2xl font-bold text-gray-800 mt-10 mb-4">
            Let’s Chat About Your Kitchen
          </h2>
          <p>
            <a
              href="/contact"
              class="font-semibold text-blue-700 hover:underline"
              >Get in touch</a
            > to arrange a no-pressure quote. I’ll help make your dream kitchen a
            reality — fitted properly and built to last.
          </p>
          <ReviewsLinkSection />
        </div>

        <aside class="w-full flex flex-col items-stretch gap-6">
          <div class="w-full order-last md:order-none">
            <GalleryGrid
              items={[
                {
                  src: galleryImg1,
                  alt: `Domestic kitchen installation by Coulsy Joinery ${locationInText}`,
                  label: "Domestic Kitchen Installation",
                },
                {
                  src: galleryImg2,
                  alt: `Commercial kitchen fitting for hospitality premises ${locationInText}`,
                  label: "Large Commercial Kitchen Fit-Out",
                },
                {
                  src: galleryImg3,
                  alt: `Modern kitchen design and installation ${locationInText}by a skilled kitchen fitter`,
                  label: "Contemporary Kitchen Setup",
                },
                {
                  src: galleryImg4,
                  alt: `Accessible kitchen installation for reduced mobility ${locationInText}`,
                  label: "Accessible Kitchen Design",
                },
                {
                  src: galleryImg5,
                  alt: `Modern kitchen installed by experienced joiners ${locationInText}`,
                  label: "Modern Kitchen Installed",
                  loading: "lazy",
                },
                {
                  src: galleryImg6,
                  alt: `Precision joinery during kitchen fitting project ${locationInText}, supplied and fitted trade kitchens including Howdens and Magnet`,
                  label: "Precision Kitchen Fitting",
                  loading: "lazy",
                },
              ]}
            />
          </div>
          <div class="w-full">
            <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md">
              <h2
                class="text-xl sm:text-2xl font-bold mb-4 text-gray-800 text-center"
              >
                Get in Touch
              </h2>
              <p class="text-gray-600 mb-6 text-center">
                Planning a new kitchen installation or upgrade? I’d love to help
                bring your vision to life.
              </p>
              <ContactForm />
            </div>
          </div>
        </aside>
      </div>

      <p class="text-sm text-gray-600 text-center mt-10">
        Looking for a trusted kitchen installer or joiner {locationInText}? I
        fit kitchens across the region with care, precision, and over 30 years
        of hands-on experience.
      </p>
      <NearbyAreas />
    </section>
  </main>
</Layout>
