---
import ContactForm from "../../components/ContactForm.astro";
import Layout from "../../layouts/Layout.astro";
import NearbyAreas from "../../components/NearbyAreasKitchenInstallers.astro"; // this location is unique a specific for the service offered !! CHECK
import Breadcrumb from "../../components/Breadcrumb.astro";

import GalleryGrid from "../../components/GalleryGrid.astro";
import galleryImg1 from "../../assets/images/kitchens/kitchen-fitter-domestic.jpg";
import galleryImg2 from "../../assets/images/kitchens/kitchen-commercial.jpg";
import galleryImg3 from "../../assets/images/kitchens/Kitchen-fitter4.jpg";
import galleryImg4 from "../../assets/images/accessible-kitchens/accessible-kitchen-main.jpg";
import galleryImg5 from "../../assets/images/kitchens/birkby-kitchen.jpg";
import galleryImg6 from "../../assets/images/kitchens/kitchen-fitter2.jpg";

const { location, type } = Astro.params;

function capitalizeFirstLetter(string: string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}
let typeFormated = type
  ? type.split("-").map(capitalizeFirstLetter).join(" ")
  : "Kitchen Installers";

const locationFormated = location ? capitalizeFirstLetter(location) : "";

const alt = location
  ? typeFormated +
    " in " +
    locationFormated +
    " by Coulsy Joinery for your local kitchen fitter and kitchen installer services in " +
    locationFormated
  : typeFormated;
---

<Layout
  title={location ? typeFormated + " in " + locationFormated : typeFormated}
>
  <main class="mx-auto md:mt-16 relative z-10">
    <section class="w-full container mx-auto px-4 sm:px-6 py-8">
      <div class="flex justify-left">
        <Breadcrumb
          crumbs={[
            { label: "Joinery Services", href: "/joinery-services" },
            { label: typeFormated, current: true },
          ]}
        />
      </div>

      <h1 class="text-3xl font-bold tracking-tight pb-4">
        {typeFormated}
        {location ? "in " + locationFormated : ""}
      </h1>

      <div class="grid md:grid-cols-2 items-start gap-8">
        <div class="space-y-4">
          <div class="space-y-4 text-gray-600 prose">
            <h2
              style="color: grey"
              class="text-4xl font-bold tracking-tight text-green-900 sm:text-4xl mb-4 mt-4"
            >
              Our Kitchen Fitting Services
            </h2>
            <p>A Kitchen installed with care and attention</p>

            <h3
              style="color: grey"
              class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
            >
              What We Offer
            </h3>

            <p>
              We are experienced kitchen installers and fitters working on
              domestic and commercial kitchen install and kitchen fitting
              projects.
            </p>
            <h3
              style="color: grey"
              class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
            >
              Domestic Kitchens
            </h3>
            <p>
              Often working on single kitchen fit-outs as well as large
              commercial projects, installing kitchens in new housing and
              domestic homes {location ? "in " + locationFormated + "." : "."}
            </p>
            <h3
              style="color: grey"
              class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
            >
              Commercial Kitchens
            </h3>
            <p>From small shops to restaurants to large university kitchens</p>

            <h3
              style="color: grey"
              class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
            >
              New build kitchens
            </h3>
            <p>Apartment and house builders new build installs</p>

            <h3
              style="color: grey"
              class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
            >
              Accessible and reduced mobility kitchens
            </h3>
            <p>A kitchen designed and installed for all abilities</p>

            <p>
              <a
                href="/joinery-services/accessible-kitchen-installers"
                class="font-semibold text-blue-700 hover:underline"
              >
                EXPLORE
              </a>our Accessible kitchens
            </p>
            <h3
              style="color: grey"
              class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
            >
              Excellent fitting
            </h3>
            <p>
              {
                location ? "Our " + locationFormated + " team of " : "Our "
              }Experienced kitchen installers and fitters will take care of your
              every need.
            </p>
            <hr />

            <h2
              style="color: grey"
              class="text-4xl font-bold tracking-tight text-green-900 sm:text-4xl mb-4 mt-4"
            >
              WE ARE
            </h2>

            <h2 class="font-semibold text-lg">Dependable</h2>
            <p>
              If you are looking for an kitchen fitter {
                location ? "in " + locationFormated : ""
              }, we are dependable kitchen installers capable of meeting your
              precise requirements and ensuring a high end kitchen installation.
            </p>
            <h2 class="font-semibold text-lg">Reliable</h2>
            <p>
              Our kitchen fitting team is consistently reliable and adaptable,
              working according to your kitchen layout, plan and design.
            </p>
            <h2 class="font-semibold text-lg">Skilled</h2>
            <p>
              Our time served joiners provide high quality, accurate kitchen
              installs.
            </p>

            <hr />

            <h2
              style="color: grey"
              class="text-4xl font-bold tracking-tight text-green-900 sm:text-4xl mb-4 mt-4"
            >
              Ready to explore your options? <a
                href="/contact"
                class="font-semibold text-blue-700 hover:underline"
                >Get in touch today</a
              > for a <a
                href="/contact"
                class="font-semibold text-blue-700 hover:underline"
                >free consultation</a
              >.
            </h2>
          </div>
        </div>

        <aside
          class="w-full flex flex-col items-stretch gap-6 order-last md:order-none"
        >
          <div class="w-full">
            <GalleryGrid
              items={[
                {
                  src: galleryImg1,
                  alt: "Domestic kitchen installation by Coulsy Joinery",
                  label: "Domestic Kitchen Installation",
                },
                {
                  src: galleryImg2,
                  alt: "Commercial kitchen fitting for hospitality premises",
                  label: "Large Commercial Kitchen Fit-Out",
                },
                {
                  src: galleryImg3,
                  alt: "Modern kitchen design and installation by skilled fitter",
                  label: "Contemporary Kitchen Setup",
                },
                {
                  src: galleryImg4,
                  alt: "Accessible kitchen installation for reduced mobility",
                  label: "Accessible Kitchen Design",
                },
                {
                  src: galleryImg5,
                  alt: "Modern Kitchen Installed",
                  label: "Modern Kitchen Installed",
                  loading: "lazy",
                },
                {
                  src: galleryImg6,
                  alt: "Precision joinery during kitchen fitting project",
                  label: "Precision Kitchen Fitting",
                  loading: "lazy",
                },
              ]}
            />
          </div>
          <div class="w-full">
            <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md">
              <h2
                class="text-xl sm:text-2xl font-bold mb-4 text-gray-800 text-center"
              >
                Get in Touch
              </h2>
              <p class="text-gray-600 mb-6 text-center">
                Planning a new kitchen installation or upgrade? Iâ€™d love to help
                bring your vision to life.
              </p>
              <ContactForm />
            </div>
          </div>
        </aside>
      </div>

      <NearbyAreas location={location} />
    </section>
  </main>
</Layout>
