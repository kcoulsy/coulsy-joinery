---
import ContactForm from "../../components/ContactForm.astro";
import Layout from "../../layouts/Layout.astro";
import NearbyAreas from "../../components/NearbyAreasSteelExitDoors.astro"; // this location is unique a specific for the service offered !! CHECK
import Breadcrumb from "../../components/Breadcrumb.astro";

import GalleryGrid from "../../components/GalleryGrid.astro";
import galleryImg1 from "../../assets/images/steel-exit-doors/Security-Fire-Exit-Bar-510x510.jpg";
import galleryImg2 from "../../assets/images/steel-exit-doors/Security-Fire-Exit-Bar-Top-Shoot-510x510.jpg";
import galleryImg3 from "../../assets/images/steel-exit-doors/Fire-Exit-Security-Door-Variations-510x510.jpg";
import galleryImg4 from "../../assets/images/steel-exit-doors/Security-Hinged-510x510.jpg";
import galleryImg5 from "../../assets/images/steel-exit-doors/OAD-Options-fire-exit-510x510.jpg";
import galleryImg6 from "../../assets/images/steel-exit-doors/Security-Fire-Exit-Door-510x510.jpg";

const { location, type } = Astro.params;

function capitalizeFirstLetter(string: string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}
let typeFormated = type
  ? type.split("-").map(capitalizeFirstLetter).join(" ")
  : "Steel Fire Exit Door Installers";

const locationFormated = location ? capitalizeFirstLetter(location) : "";

const locationInText = location ? `in ${locationFormated} ` : "";

const alt = location
  ? typeFormated +
    " in " +
    locationFormated +
    " by Coulsy Joinery for all your " +
    locationFormated +
    " steel or metal fire exit door installation and maintenance services"
  : typeFormated;
---

<Layout
  title={location ? typeFormated + " in " + locationFormated : typeFormated}
>
  <main class="mx-auto md:mt-16 relative z-10">
    <section class="w-full container mx-auto px-4 sm:px-6 py-12">
      <Breadcrumb
        crumbs={[
          { label: "Joinery Services", href: "/joinery-services" },
          { label: typeFormated, current: true },
        ]}
      />

      <h1 class="text-3xl font-bold tracking-tight pb-4">
        {typeFormated}
        {location ? "in " + locationFormated : ""}
      </h1>

      <div class="grid md:grid-cols-2 items-start gap-8">
        <div class="space-y-4 text-gray-600 prose">
          <h2
            style="color: grey"
            class="text-4xl font-bold tracking-tight text-green-900 sm:text-4xl mb-4 mt-4"
          >
            Our Steel Exit, Fire Exit & High-Security Steel Door Installation
            Services Include:
          </h2>
          <p>
            As part of our services, we specialise in installing all types of
            steel / metal fire exit doors {
              location ? "in " + locationFormated : ""
            }.
          </p>

          <h3
            style="color: grey"
            class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
          >
            Site Assessment & Consultation:
          </h3>
          <p>
            We assess your property {location ? "in " + locationFormated : ""}
            to determine the best type of door for your needs, ensuring optimal fire
            exit safety and security.
          </p>
          <h3
            style="color: grey"
            class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
          >
            Steel Door Installation:
          </h3>
          <p>
            Expert installation of steel exit doors, fire exit doors, and
            high-security doors, including secure frame fixing, precise
            alignment, and adjustment for proper sealing {
              location ? "in " + locationFormated : ""
            }.
          </p>
          <h3
            style="color: grey"
            class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
          >
            Fire Safety Compliance:
          </h3>
          <p>
            We ensure all steel fire exit doors are installed to meet the latest
            fire safety standards, protecting both your property and its
            occupants.
          </p>
          <hr />
          <h2
            style="color: grey"
            class="text-4xl font-bold tracking-tight text-green-900 sm:text-4xl mb-4 mt-4"
          >
            Our Steel Exit, Fire Exit & High-Security Steel Door Installation
            Services Include:
          </h2>

          <h3
            style="color: grey"
            class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
          >
            High-Security Door Installations:
          </h3>
          <p>
            High-Security Door For properties {
              location ? "in " + locationFormated : ""
            } that require advanced security, we install high-security steel doors
            that offer superior protection against break-ins, vandalism, and unauthorised
            access.
          </p>

          <h3
            style="color: grey"
            class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
          >
            Custom Solutions:
          </h3>
          <p>
            We provide tailored solutions for commercial buildings, warehouses,
            residential properties, schools, and secure facilities, ensuring
            that your emergency exit plans and security needs are up to
            standard.
          </p>

          <h3
            style="color: grey"
            class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
          >
            Repairs and Maintenance:
          </h3>
          <p>
            We offer a maintenance and repair service for steel exit doors {
              location ? "in " + locationFormated : ""
            } to ensure that your steel exit, fire exit, and high-security doors
            remain in excellent working condition.
          </p>
          <hr />

          <h2
            style="color: grey"
            class="text-4xl font-bold tracking-tight text-green-900 sm:text-4xl mb-4 mt-4"
          >
            WE ARE
          </h2>
          <h4 class="font-semibold text-lg">Dependable</h4>
          <p>
            If you need a steel fire exit door installing in {
              location ? "in " + locationFormated : ""
            }, we are a dependable provider capable of meeting your precise
            requirements and ensuring compliance with current regulations for
            proper steel/metal fire door and frame installation.
          </p>
          <h4 class="font-semibold text-lg">Reliable</h4>
          <p>
            Consistently reliable and adaptable, working according to your steel
            exit door specifications.
          </p>
          <h4 class="font-semibold text-lg">Skilled</h4>
          <p>
            Highly skilled and professional, boasting extensive experience and
            qualifications in the installation for steel fire exit doors.
          </p>

          <h4 class="font-semibold text-lg">City &amp; Guilds Certified</h4>
          <p>
            When you choose us, you're choosing a joinery team that's not only
            qualified but dedicated to excellence in every aspect of our joinery
            work.
          </p>

          <h4 class="font-semibold text-lg">CSCS Certified</h4>

          <p>
            When you choose us, you're choosing a team that's not only qualified
            but dedicated to excellence in every aspect of our work.
          </p>
          <hr />

          <h2
            style="color: grey"
            class="text-4xl font-bold tracking-tight text-green-900 sm:text-4xl mb-4 mt-4"
          >
            Ready to explore your options? <a
              href="/contact"
              class="font-semibold text-blue-700 hover:underline"
              >Get in touch today</a
            > for a <a
              href="/contact"
              class="font-semibold text-blue-700 hover:underline"
              >free consultation</a
            >.
          </h2>
        </div>

        <aside class="w-full flex flex-col items-stretch gap-6 mt-6">
          <div class="w-full">
            <GalleryGrid
              items={[
                {
                  src: galleryImg1,
                  alt: `Steel fire exit door with emergency bar installed by professional door fitters ${locationInText}`,
                  label: "Steel Fire Exit with Emergency Push Bar",
                },
                {
                  src: galleryImg2,
                  alt: `Top shoot bolt locking system on steel fire exit door installed for added security ${locationInText}`,
                  label: "Top Bolt Locking on Steel Exit Door",
                },
                {
                  src: galleryImg3,
                  alt: `Range of fire exit security door variations fitted to commercial specifications ${locationInText}`,
                  label: "Range of Commercial Fire Exit Door Designs",
                },
                {
                  src: galleryImg4,
                  alt: `Steel security hinged fire exit door installation for high-traffic areas ${locationInText}`,
                  label: "Hinged Steel Door for High-Security Areas",
                },
                {
                  src: galleryImg5,
                  alt: `Optional anti-drill and panic bar configurations for emergency fire exit doors ${locationInText}`,
                  label: "Anti-Drill & Panic Bar Fire Exit Features",
                  loading: "lazy",
                },
                {
                  src: galleryImg6,
                  alt: `Exterior view of steel fire exit door professionally installed for safety compliance ${locationInText}`,
                  label: "Exterior Steel Fire Exit with Safety Signage",
                  loading: "lazy",
                },
              ]}
            />
          </div>
          <div class="w-full">
            <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md">
              <h2
                class="text-xl sm:text-2xl font-bold mb-4 text-gray-800 text-center"
              >
                Get in Touch
              </h2>
              <p class="text-gray-600 mb-6 text-center">
                Need help with a heritage or restoration joinery project? I’d be
                happy to discuss how we can help.
              </p>
              <ContactForm />
            </div>
          </div>
        </aside>
      </div>

      <NearbyAreas location={location} />
    </section>
  </main>
</Layout>
