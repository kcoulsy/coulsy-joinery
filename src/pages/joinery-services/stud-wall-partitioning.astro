---
import ContactForm from "../../components/ContactForm.astro";
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import studWallHeader from "../../assets/images/stud-walls/stud-walls-header.png";
import studWallImg1 from "../../assets/images/stud-walls/stud-walls1.jpg";
import studWallImg2 from "../../assets/images/stud-walls/stud-walls2.jpg";
import studWallImg3 from "../../assets/images/stud-walls/stud-walls3.jpg";
import studWallImg4 from "../../assets/images/stud-walls/stud-walls4.jpg";
import NearbyAreasStudWalls from "../../components/NearbyAreasStudWalls.astro";

const currentPath = Astro.url.pathname;
const { location, type } = Astro.params;

function capitalizeFirstLetter(string: string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}
let typeFormated = type
  ? type.split("-").map(capitalizeFirstLetter).join(" ")
  : "Stud Wall Partitioning";

if (type === "/joinery-services/stud-wall-partitioning") {
  typeFormated = "Stud Wall Partitioning";
}

const locationFormated = location ? capitalizeFirstLetter(location) : "";
const alt = typeFormated + " in " + locationFormated;
