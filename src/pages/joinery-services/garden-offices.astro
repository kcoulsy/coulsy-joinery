---
import ContactForm from "../../components/ContactForm.astro";
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import ImgHeader from "../../assets/images/garden-offices/garden-office-header-image.jpg";
import Img1 from "../../assets/images/garden-offices/garden-office-image1.jpg";
import Img2 from "../../assets/images/garden-offices/garden-office-image2.jpg";
import Img3 from "../../assets/images/garden-offices/garden-office-image3.jpg";
import Img4 from "../../assets/images/garden-offices/garden-office-image4.jpg";
import NearbyAreas from "../../components/NearbyAreasGardenOffices.astro";

const { location, type } = Astro.params;

function capitalizeFirstLetter(string: string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}
let typeFormated = type
  ? type.split("-").map(capitalizeFirstLetter).join(" ")
  : "Garden Offices and Garden Rooms";

if (type === "/joinery-services/garden-offices") {
  typeFormated = "Garden Offices and Garden Rooms";
}

const locationFormated = location ? capitalizeFirstLetter(location) : "";
const alt = typeFormated + " in " + locationFormated;
---

<Layout title={typeFormated}>
  <div class="h-[600px] w-full absolute">
    <div class="w-full h-full backdrop-blur-[0.5px] absolute bg-gray-700/20">
    </div>
    <Image
      src={ImgHeader}
      width="1545"
      height="600"
      class="object-fit w-full h-[600px]"
      alt={alt}
      loading="eager"
    />
  </div>
  <main class="mx-auto md:mt-16 relative z-10">
    <div class="flex flex-wrap max-w-screen overflow-x-hidden">
      <div class="w-full md:w-2/3 lg:w-2/3 md:px-4">
        <div
          class="flex justify-center items-center h-80 md:h-[536px] pt-16 md:pt-0 pb-16"
        >
          <h1
            class="text-[56px] leading-[56px] mt-4 font-bold text-white w-96 text-center"
          >
            {typeFormated}
          </h1>
        </div>
      </div>

      <div class="lg:w-1/3 md:w-1/3 pr-4 pl-4">
        <div class="flex flex-wrap flex-col lg:pb-2">
          <ContactForm />
        </div>
      </div>
    </div>

    <div class="w-full container mx-auto px-8 py-8">
      <div class="flex justify-left">
        <nav class="text-sm sm:text-base pb-6">
          <ol class="list-none p-0 inline-flex space-x-2">
            <li class="flex items-center">
              <svg
                onclick="window.location.href='/';"
                xmlns="http://www.w3.org/2000/svg"
                height="1em"
                viewBox="0 0 576 512"
                class="cursor-pointer hover:fill-blue-500 transition-colors duration-300 mr-2"
                fill="#4b5563"
                ><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                <path
                  d="M575.8 255.5c0 18-15 32.1-32 32.1h-32l.7 160.2c0 2.7-.2 5.4-.5 8.1V472c0 22.1-17.9 40-40 40H456c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1H416 392c-22.1 0-40-17.9-40-40V448 384c0-17.7-14.3-32-32-32H256c-17.7 0-32 14.3-32 32v64 24c0 22.1-17.9 40-40 40H160 128.1c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2H104c-22.1 0-40-17.9-40-40V360c0-.9 0-1.9 .1-2.8V287.6H32c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z"
                ></path></svg
              >
              <span class="mx-2">/</span>
            </li>
            <li class="flex items-center">
              <a
                href="/joinery-services"
                class="text-gray-600 hover:text-blue-500 transition-colors duration-300"
                >Joinery Services</a
              >
              <span class="mx-2">/</span>
            </li>

            <li class="flex items-center">
              <span class="text-yellow-600 font-semibold">{typeFormated}</span>
            </li>
          </ol>
        </nav>
      </div>

      <h1 class="text-3xl font-bold tracking-tight pb-4">
        {typeFormated}
        {location ? "in " + locationFormated : ""}
      </h1>
      <div class="grid md:grid-cols-2 items-start gap-8">
        <div class="space-y-4">
          <div class="space-y-4 text-gray-600 prose">
            <p>
              One of the services that we provide{
                location ? " in " + locationFormated : ""
              } is creating amazing {typeFormated}.
            </p>
            <p>Transform Your Garden into a Personal Oasis</p><p>
              Are you dreaming of a space that combines the tranquility of
              nature with the functionality of a modern workspace {
                location ? "in " + locationFormated : ""
              }?
            </p>
            <p>
              Here at Coulsy Joinery we specialise in designing and building
              bespoke garden offices and garden rooms in the heart of {
                location ? " " + locationFormated : ""
              }. Whether you need a serene office for remote work, a creative
              studio, or an extra room for relaxation, we bring your vision to
              life with our custom-made solutions.
            </p>

            <h2 class="font-semibold text-lg">Custom Designs</h2>
            <p>
              Every garden office or room we create is tailored to your specific
              needs and preferences. From contemporary designs to classic
              styles, we ensure your new space complements your garden and
              lifestyle.
            </p>
            <h2 class="font-semibold text-lg">Quality Craftsmanship</h2>
            <p>
              We use only the finest materials and cutting-edge construction
              techniques to ensure durability and comfort. Our skilled team is
              committed to delivering high-quality craftsmanship on every
              project.
            </p>
            <h2 class="font-semibold text-lg">Sustainable Solutions</h2>
            <p>
              We care about the environment as much as you do. That’s why we
              offer eco-friendly options that integrate seamlessly with your
              garden and reduce your carbon footprint..
            </p>
            <h2 class="font-semibold text-lg">Local Expertise</h2>
            <p>
              Based in York, we understand the local architecture and landscape,
              allowing us to design garden spaces that enhance the beauty and
              value of your property.
            </p>
            <h2 class="font-semibold text-lg">
              Your Perfect Garden Room Awaits {
                location ? "in " + locationFormated : ""
              }
            </h2>
            <p>
              Imagine stepping into your own private retreat without leaving
              your property. Whether it’s a cozy reading nook, a fully equipped
              office, or a vibrant studio, your ideal space is just a few steps
              away. Our team is passionate about helping you create a garden
              room that is as unique as you are, providing a seamless blend of
              indoor comfort and outdoor charm.
            </p>
            <h2 class="font-semibold text-lg">Discover the Possibilities</h2>
            <p>
              Explore our gallery of completed projects and discover how we’ve
              helped homeowners throughout {
                location ? " " + locationFormated : ""
              } transform their gardens. Each project reflects our commitment to
              excellence and our dedication to customer satisfaction.
            </p>
            <h2 class="font-semibold text-lg">
              <a
                href="/contact"
                class="font-semibold text-blue-700 hover:underline"
                >Contact Us Today</a
              >
            </h2>
            <p>
              Ready to make your dream garden office or room a reality? Contact
              us today for a free consultation, and let’s discuss how we can
              create the perfect garden space for you. With Coulsy Ltd, your
              garden isn’t just a backyard—it’s a destination.
            </p>
          </div>
        </div>

        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-2 mt-6">
          <div
            class="group p-3 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
          >
            <div class="relative overflow-hidden rounded-xl">
              <Image
                src={Img1}
                alt={alt}
                loading="eager"
                width="1000"
                height="667"
                class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
              />
            </div>
          </div>

          <div
            class="group p-3 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
          >
            <div class="relative overflow-hidden rounded-xl">
              <Image
                src={Img2}
                alt={alt}
                loading="eager"
                width="1000"
                height="667"
                class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
              />
            </div>
          </div>

          <div
            class="group p-3 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
          >
            <div class="relative overflow-hidden rounded-xl">
              <Image
                src={Img3}
                alt={alt}
                loading="eager"
                width="1000"
                height="667"
                class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
              />
            </div>
          </div>

          <div
            class="group p-3 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
          >
            <div class="relative overflow-hidden rounded-xl">
              <Image
                src={Img4}
                alt={alt}
                loading="eager"
                width="1000"
                height="667"
                class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <NearbyAreas location={location} />
  </main>
</Layout>
