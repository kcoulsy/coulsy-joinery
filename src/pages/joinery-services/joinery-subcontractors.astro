---
import ContactForm from "../../components/ContactForm.astro";
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import ImgHeader from "../../assets/images/joinery-subcontractors/header-image.jpg";
import Img1 from "../../assets/images/joinery-subcontractors/stud-walls-commercial.jpg";
import Img2 from "../../assets/images/joinery-subcontractors/sub-contract-joinery1.jpg";
import Img3 from "../../assets/images/joinery-subcontractors/sub-contract-joinery2.jpg";
import Img4 from "../../assets/images/joinery-subcontractors/sub-contract-joinery3.jpg";
import NearbyAreas from "../../components/NearbyAreasJoinerySubcontractors.astro"; // this location is unique a specific for the service offered !! CHECK

const { location, type } = Astro.params;

function capitalizeFirstLetter(string: string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}
let typeFormated = type
  ? type.split("-").map(capitalizeFirstLetter).join(" ")
  : "Sub Contract Joinery Contractors";

// if (type === "/joinery-services/joinery-subcontractors") {
//   typeFormated = "Sub Contract Joinery Contractors";
// }

const locationFormated = location ? capitalizeFirstLetter(location) : "";

const alt = location
  ? typeFormated +
    " in " +
    locationFormated +
    " by Coulsy Joinery for all your " +
    locationFormated +
    " carpentry and joinery services"
  : typeFormated;
---

<Layout
  title={location ? typeFormated + " in " + locationFormated : typeFormated}
>
  <div class="h-[600px] w-full absolute">
    <div class="w-full h-full backdrop-blur-[0.5px] absolute bg-gray-700/20">
    </div>
    <Image
      src={ImgHeader}
      width="1545"
      height="600"
      class="object-fit w-full h-[600px]"
      alt={alt}
      loading="eager"
    />
  </div>
  <main class="mx-auto md:mt-16 relative z-10">
    <div class="flex flex-wrap max-w-screen overflow-x-hidden">
      <div class="w-full md:w-2/3 lg:w-2/3 md:px-4">
        <div
          class="flex justify-center items-center h-80 md:h-[536px] pt-16 md:pt-0 pb-16"
        >
          <h1
            class="text-[56px] leading-[56px] mt-4 font-bold text-white w-96 text-center"
          >
            {typeFormated}
          </h1>
        </div>
      </div>

      <div class="lg:w-1/3 md:w-1/3 pr-4 pl-4">
        <div class="flex flex-wrap flex-col lg:pb-2">
          <ContactForm />
        </div>
      </div>
    </div>

    <div class="w-full container mx-auto px-8 py-8">
      <div class="flex justify-left">
        <nav class="text-sm sm:text-base pb-6">
          <ol class="list-none p-0 inline-flex space-x-2">
            <li class="flex items-center">
              <svg
                onclick="window.location.href='/';"
                xmlns="http://www.w3.org/2000/svg"
                height="1em"
                viewBox="0 0 576 512"
                class="cursor-pointer hover:fill-blue-500 transition-colors duration-300 mr-2"
                fill="#4b5563"
                ><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                <path
                  d="M575.8 255.5c0 18-15 32.1-32 32.1h-32l.7 160.2c0 2.7-.2 5.4-.5 8.1V472c0 22.1-17.9 40-40 40H456c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1H416 392c-22.1 0-40-17.9-40-40V448 384c0-17.7-14.3-32-32-32H256c-17.7 0-32 14.3-32 32v64 24c0 22.1-17.9 40-40 40H160 128.1c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2H104c-22.1 0-40-17.9-40-40V360c0-.9 0-1.9 .1-2.8V287.6H32c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z"
                ></path></svg
              >
              <span class="mx-2">/</span>
            </li>
            <li class="flex items-center">
              <a
                href="/joinery-services"
                class="text-gray-600 hover:text-blue-500 transition-colors duration-300"
                >Joinery Services</a
              >
              <span class="mx-2">/</span>
            </li>

            <li class="flex items-center">
              <span class="text-yellow-600 font-semibold">{typeFormated}</span>
            </li>
          </ol>
        </nav>
      </div>

      <h1 class="text-3xl font-bold tracking-tight pb-4">
        {typeFormated}
        {location ? "in " + locationFormated : ""}
      </h1>
      <div class="grid md:grid-cols-2 items-start gap-8">
        <div class="space-y-4">
          <div class="space-y-4 text-gray-600 prose">
            <p>
              One of the services that we provide{
                location ? " in " + locationFormated : ""
              } is sub contract joinery contracting.
            </p>
            <p>
              Based in York, we are a joinery subcontractor offering both
              labor-only and supply-and-fix services across Yorkshire,
              Humberside, and surrounding areas.
            </p>
            <p>
              Our extensive range of subcontracting services is available to
              contractors throughout the UK.
            </p>
            <h2 class="font-semibold text-lg">Dependable and Reliable</h2>
            <p>
              If you require a dependable joinery subcontractor, we are here to
              meet your needs. With a reputation for delivering high-quality
              workmanship and reliable service, we ensure that every project is
              completed on time and to the highest standards.
            </p>
            <p>
              Whether working on residential properties, offices, schools, care
              homes, universities, hotels, or hospitals, our team has the
              expertise and dedication to bring your vision to life.
            </p>
            <p>
              Our commitment to excellence means that we provide all the
              necessary fixings and work closely with contractors to ensure
              seamless integration into any project.
            </p>
            <p>
              By choosing us as your joinery subcontractor, you gain a partner
              that understands the complexities of construction and prioritizes
              your projectâ€™s success.
            </p>
            <p>
              The perfect choice for those who need a professional joinery
              subcontractor {location ? "in " + locationFormated : ""}.
            </p>
            <h2 class="font-semibold text-lg">Skilled</h2>
            <p>
              Highly skilled and professional joinery subcontractors, boasting
              extensive joinery experience and joinery qualifications.
            </p>
            <h2 class="font-semibold text-lg">Fully Certified</h2>

            <p>
              When you choose us, you're choosing a team that's not only
              qualified but dedicated to excellence in every aspect of our work.
            </p>
            <p>Rams including site guidance at the ready.</p>
            <h2 class="font-semibold text-lg">
              Let us handle the joinery details, so you can focus on the bigger
              picture.
            </h2>
            <p>
              Please feel free to <a
                href="/contact"
                class="font-semibold text-blue-700 hover:underline"
                >contact us</a
              >.
            </p>
          </div>
        </div>

        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-2 mt-6">
          <div
            class="group p-3 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
          >
            <div class="relative overflow-hidden rounded-xl">
              <Image
                src={Img1}
                alt={alt}
                loading="eager"
                width="1000"
                height="667"
                class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
              />
            </div>
          </div>

          <div
            class="group p-3 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
          >
            <div class="relative overflow-hidden rounded-xl">
              <Image
                src={Img2}
                alt={alt}
                loading="eager"
                width="1000"
                height="667"
                class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
              />
            </div>
          </div>

          <div
            class="group p-3 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
          >
            <div class="relative overflow-hidden rounded-xl">
              <Image
                src={Img3}
                alt={alt}
                loading="eager"
                width="1000"
                height="667"
                class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
              />
            </div>
          </div>

          <div
            class="group p-3 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
          >
            <div class="relative overflow-hidden rounded-xl">
              <Image
                src={Img4}
                alt={alt}
                loading="eager"
                width="1000"
                height="667"
                class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <NearbyAreas location={location} />
  </main>
</Layout>
