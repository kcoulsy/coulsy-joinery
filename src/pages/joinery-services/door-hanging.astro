---
import ContactForm from "../../components/ContactForm.astro";
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import doorHeaderImg from "../../assets/images/doors/fire-doors1.jpg";
import doorImg1 from "../../assets/images/doors/fire-doors1.jpg";
import doorImg2 from "../../assets/images/doors/fire-doors2.jpg";
import doorImg3 from "../../assets/images/doors/fire-seal.jpg";
import doorImg4 from "../../assets/images/doors/fire-doors-sign.png";
import NearbyAreas from "../../components/NearbyAreasDoorHanging.astro"; // this location is unique a specific for the service offered !! CHECK
import FireStats from "../../components/FireStats.astro";
import CommonFaults from "../../components/CommonFaults.astro";

const { location, type } = Astro.params;

function capitalizeFirstLetter(string: string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}
let typeFormated = type
  ? type.split("-").map(capitalizeFirstLetter).join(" ")
  : "Door Hanging";

// if (type === "/joinery-services/door-hanging") {
//   typeFormated = "Door Hanging5sssss";
// }

const locationFormated = location ? capitalizeFirstLetter(location) : "";

const alt = location
  ? typeFormated +
    " in " +
    locationFormated +
    " by Coulsy Joinery for all your " +
    locationFormated +
    " carpentry and joinery door and frame fitting services"
  : typeFormated;
---

<Layout
  title={location ? typeFormated + " in " + locationFormated : typeFormated}
>
  <div class="w-full container mx-auto px-4 sm:px-6 py-8">
    <div class="w-full container mx-auto px-4 sm:px-6 py-8">
      <div class="flex justify-left">
        <nav class="text-sm sm:text-base pb-6">
          <ol class="list-none p-0 inline-flex space-x-2">
            <li class="flex items-center">
              <svg
                onclick="window.location.href='/';"
                xmlns="http://www.w3.org/2000/svg"
                height="1em"
                viewBox="0 0 576 512"
                class="cursor-pointer hover:fill-blue-500 transition-colors duration-300 mr-2"
                fill="#4b5563"
                ><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                <path
                  d="M575.8 255.5c0 18-15 32.1-32 32.1h-32l.7 160.2c0 2.7-.2 5.4-.5 8.1V472c0 22.1-17.9 40-40 40H456c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1H416 392c-22.1 0-40-17.9-40-40V448 384c0-17.7-14.3-32-32-32H256c-17.7 0-32 14.3-32 32v64 24c0 22.1-17.9 40-40 40H160 128.1c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2H104c-22.1 0-40-17.9-40-40V360c0-.9 0-1.9 .1-2.8V287.6H32c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z"
                ></path></svg
              >
              <span class="mx-2">/</span>
            </li>
            <li class="flex items-center">
              <a
                href="/joinery-services"
                class="text-gray-600 hover:text-blue-500 transition-colors duration-300"
                >Joinery Services</a
              >
              <span class="mx-2">/</span>
            </li>

            <li class="flex items-center">
              <span class="text-yellow-600 font-semibold">{typeFormated}</span>
            </li>
          </ol>
        </nav>
      </div>

      <h1
        class="text-3xl font-bold tracking-tight pb-4 text-center sm:text-left"
      >
        {typeFormated}
        {location ? "in " + locationFormated : ""}
      </h1>

      <div class="grid md:grid-cols-2 items-start gap-8">
        <div class="space-y-4">
          <div class="space-y-4 text-gray-600 prose">
            <p>
              I’ve been fitting doors for years — from single internal doors to
              full fire door packages. If you're after reliable, tidy work and
              someone who turns up when they say they will, you're in the right
              place. I work with all kinds of doors: wood, metal, composite,
              even UPVC — and I’ll help make sure what you choose is right for
              your space and needs.
              <br />
              You can also take a look at my <a
                href="/about/qualifications"
                class="text-blue-700 font-semibold hover:underline"
                >Qualifications</a
              > to see the skills and training I bring to every job.
            </p>
            <p>
              If you're specifically looking for a steel fire escape door, check
              out our
              <a
                href="/joinery-services/steel-fire-exit-door-installer"
                class="text-blue-700 font-semibold hover:underline"
                >Steel Fire Exit Door Installer</a
              >
              service.
            </p>
            <hr class="my-6 border-gray-200" />

            <h2 class="text-xl sm:text-2xl font-semibold text-gray-800">
              What Makes Us Different
            </h2>
            <p>
              We take extra care in everything we do — not just the joinery
              itself, but how we work around your home or site. Every task area
              is fully protected before we start, and we make sure everything is
              thoroughly cleaned afterwards.
            </p>
            <p>
              Once the work is complete, we don’t just pack up and go. We’ll
              walk you through everything we’ve done, demonstrate the work so
              you can see it in action, and ask you to sign off once you’re
              happy. We’ll also provide a handover form for your records — it’s
              all part of how we work.
            </p>
            <p>
              These small steps add up to something big: confidence. When you
              hire us, you’re hiring a team that cares about the detail, the
              finish, and your experience as a customer.
            </p>
            <hr class="my-6 border-gray-200" />

            <h3 class="text-lg sm:text-xl font-semibold text-gray-700">
              Dependable
            </h3>
            <p>
              If you need door sets or fire doors {
                location ? "in " + locationFormated : ""
              }, I’ll make sure they're fitted right first time. I stick to the
              regulations and make sure everything’s safe and solid.
            </p>
            <h3 class="text-lg sm:text-xl font-semibold text-gray-700">
              Reliable
            </h3>
            <p>
              I turn up when I say I will and get the job done without fuss. I
              know your time’s valuable, and I don’t waste it.
            </p>
            <h3 class="text-lg sm:text-xl font-semibold text-gray-700">
              Skilled
            </h3>
            <p>
              With years of experience and proper qualifications behind me, I
              take real pride in what I do — and it shows in the finish.
            </p>
            <h3 class="text-lg sm:text-xl font-semibold text-gray-700">
              City & Guilds Certified
            </h3>
            <p>
              City & Guilds qualified and trained, I always aim for a high
              standard of work and take pride in every job.
            </p>
            <h3 class="text-lg sm:text-xl font-semibold text-gray-700">
              CSCS Certified
            </h3>
            <p>
              I hold a CSCS Gold card, so you know I’m up to date with health
              and safety for on-site work — giving you peace of mind.
            </p>
            <hr class="my-6 border-gray-200" />

            <p>
              If you’ve got questions or want to chat through what you need,
              just <a
                href="/contact"
                class="font-semibold text-blue-700 hover:underline"
                >get in touch</a
              >. I’ll get back to you as soon as I can.
            </p>
          </div>
        </div>

        <div class="flex flex-col gap-6 mt-6">
          <div class="grid grid-cols-2 gap-4">
            <div
              class="group p-3 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
            >
              <div class="relative overflow-hidden rounded-xl">
                <Image
                  src={doorImg1}
                  alt={alt}
                  loading="eager"
                  width="1000"
                  height="667"
                  class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
                />
              </div>
            </div>

            <div
              class="group p-3 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
            >
              <div class="relative overflow-hidden rounded-xl">
                <Image
                  src={doorImg2}
                  alt={alt}
                  loading="eager"
                  width="1000"
                  height="667"
                  class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
                />
              </div>
            </div>

            <div
              class="group p-3 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
            >
              <div class="relative overflow-hidden rounded-xl">
                <Image
                  src={doorImg3}
                  alt={alt}
                  loading="eager"
                  width="1000"
                  height="667"
                  class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
                />
              </div>
            </div>

            <div
              class="group p-3 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
            >
              <div class="relative overflow-hidden rounded-xl">
                <Image
                  src={doorImg4}
                  alt={alt}
                  loading="eager"
                  width="1000"
                  height="667"
                  class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
                />
              </div>
            </div>
          </div>

          <div class="bg-white p-6 rounded-xl shadow-md">
            <h2 class="text-2xl font-bold mb-4 text-gray-800 text-center">
              Get in Touch
            </h2>
            <p class="text-gray-600 mb-6 text-center">
              Need help with your doors or have a question? I’d love to hear
              from you.
            </p>
            <ContactForm />
          </div>
        </div>
      </div>
    </div>
    <FireStats />
    <CommonFaults />

    <NearbyAreas location={location} />
  </div></Layout
>
