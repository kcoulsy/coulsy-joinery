---
import ContactForm from "../../components/ContactForm.astro";
import Layout from "../../layouts/Layout.astro";
import NearbyAreas from "../../components/NearbyAreasAccessibleKitchenInstallers.astro"; // this location is unique a specific for the service offered !! CHECK

import GalleryGrid from "../../components/GalleryGrid.astro";
import galleryImg1 from "../../assets/images/accessible-kitchens/accessible-kitchen-main.jpg";
import galleryImg2 from "../../assets/images/accessible-kitchens/accessible-kitchen-wheelchair-user.jpg";
import galleryImg3 from "../../assets/images/accessible-kitchens/accessible-kitchen-lowered-hob.jpg";
import galleryImg4 from "../../assets/images/accessible-kitchens/accessible-kitchen-lowered-sink.jpg";
import galleryImg5 from "../../assets/images/accessible-kitchens/accessible-kitchen-pull-out-unit.jpg";
import galleryImg6 from "../../assets/images/accessible-kitchens/accessible-kitchen-remote-controlled.jpg";

const { location, type } = Astro.params;

function capitalizeFirstLetter(string: string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}
let typeFormated = type
  ? type.split("-").map(capitalizeFirstLetter).join(" ")
  : "Accessible Kitchen Installers";

// if (type === "/joinery-services/kitchen-installers") {
//   typeFormated = "Kitchen Installers";
// }

const locationFormated = location ? capitalizeFirstLetter(location) : "";

const alt = location
  ? typeFormated +
    " in " +
    locationFormated +
    " by Coulsy Joinery for your local accessible kitchen fitter and accessible kitchen installer services in " +
    locationFormated
  : typeFormated;
---

<Layout
  title={location ? typeFormated + " in " + locationFormated : typeFormated}
>
  <main class="mx-auto md:mt-16 relative z-10">
    <section class="w-full container mx-auto px-4 sm:px-6 py-12">
      <div class="flex justify-left">
        <nav class="text-sm sm:text-base pb-6">
          <ol class="list-none p-0 inline-flex space-x-2">
            <li class="flex items-center">
              <svg
                onclick="window.location.href='/';"
                xmlns="http://www.w3.org/2000/svg"
                height="1em"
                viewBox="0 0 576 512"
                class="cursor-pointer hover:fill-blue-500 transition-colors duration-300 mr-2"
                fill="#4b5563"
                ><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                <path
                  d="M575.8 255.5c0 18-15 32.1-32 32.1h-32l.7 160.2c0 2.7-.2 5.4-.5 8.1V472c0 22.1-17.9 40-40 40H456c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1H416 392c-22.1 0-40-17.9-40-40V448 384c0-17.7-14.3-32-32-32H256c-17.7 0-32 14.3-32 32v64 24c0 22.1-17.9 40-40 40H160 128.1c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2H104c-22.1 0-40-17.9-40-40V360c0-.9 0-1.9 .1-2.8V287.6H32c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z"
                ></path></svg
              >
              <span class="mx-2">/</span>
            </li>
            <li class="flex items-center">
              <a
                href="/joinery-services"
                class="text-gray-600 hover:text-blue-500 transition-colors duration-300"
                >Joinery Services</a
              >
              <span class="mx-2">/</span>
            </li>

            <li class="flex items-center">
              <span class="text-yellow-600 font-semibold">{typeFormated}</span>
            </li>
          </ol>
        </nav>
      </div>

      <h1 class="text-3xl font-bold tracking-tight pb-4">
        {typeFormated}
        {location ? "in " + locationFormated : ""}
      </h1>
      <div class="grid md:grid-cols-2 items-start gap-8">
        <div class="space-y-4">
          <div class="space-y-4 text-gray-600 prose">
            <h2
              style="color: grey"
              class="text-4xl font-bold tracking-tight text-green-900 sm:text-4xl mb-4 mt-4"
            >
              Our Accessible Kitchens
            </h2>
            <p>A Kitchen Designed for All Abilities</p>

            <h3
              style="color: grey"
              class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
            >
              What We Offer
            </h3>
            <p>
              Your kitchen should be more than just beautifulâ€”it should work for
              you, no matter your mobility needs. <br />We can create
              functional, accessible kitchen spaces that promote independence
              and inclusive living without compromising on style or quality.
            </p>
            <h3
              style="color: grey"
              class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
            >
              Accessible Layouts
            </h3>
            <p>
              Easy-to-navigate designs with wider pathways, lower countertops,
              and accessible storage that ensure every inch of your kitchen is
              within reach.
            </p>
            <h3
              style="color: grey"
              class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
            >
              Adjustable Features
            </h3>
            <p>
              Height-adjustable worktops, pull-down cabinets, and smart
              technology that adapts to your needs, offering flexibility and
              ease of use.
            </p>
            <h3
              style="color: grey"
              class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
            >
              Barrier-Free Design
            </h3>
            <p>
              Seamless, open spaces free of obstacles or barriers, designed to
              accommodate wheelchairs, walkers, or other mobility aids.
            </p>
            <h3
              style="color: grey"
              class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
            >
              Ergonomic Solutions
            </h3>
            <p>
              Thoughtful details like touch-free faucets, side-opening ovens,
              and pull-out drawers to enhance comfort and convenience.
            </p>
            <h3
              style="color: grey"
              class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
            >
              Safe & Stylish
            </h3>
            <p>
              Anti-slip flooring, safety rails, and thoughtfully positioned
              appliances, all integrated into a beautifully designed kitchen
              that feels like home. With us, you can enjoy the perfect balance
              of independence, functionality, and style. Our solutions are
              tailored to your unique needs, ensuring your kitchen works with
              you, not against you.
            </p>
            <h3
              style="color: grey"
              class="font-bold tracking-tight sm:text-2xl mb-4 mt-4"
            >
              Excellent Fitting
            </h3>
            <p>
              {
                location ? "Our " + locationFormated + " team of " : "Our "
              }Experienced accessible kitchen installers and fitters will take
              care of your every need.
            </p>
            <hr />

            <h2
              style="color: grey"
              class="text-4xl font-bold tracking-tight text-green-900 sm:text-4xl mb-4 mt-4"
            >
              WE ARE
            </h2>

            <h2 class="font-semibold text-lg">Dependable</h2>
            <p>
              If you are looking for an accessible kitchen fitter {
                location ? "in " + locationFormated : ""
              }, we are dependable accessible kitchen installers capable of
              meeting your precise requirements and ensuring a high end kitchen
              installation.
            </p>
            <h2 class="font-semibold text-lg">Reliable</h2>
            <p>
              Our kitchen fitting team is consistently reliable and adaptable,
              working according to your kitchen layout, plan and design.
            </p>
            <h2 class="font-semibold text-lg">Skilled</h2>
            <p>
              Our time served joiners provide high quality, accessible accurate
              kitchen installs.
            </p>
            <hr />

            <h2
              style="color: grey"
              class="text-4xl font-bold tracking-tight text-green-900 sm:text-4xl mb-4 mt-4"
            >
              Ready to explore your options? <a
                href="/contact"
                class="font-semibold text-blue-700 hover:underline"
                >Get in touch today</a
              > for a <a
                href="/contact"
                class="font-semibold text-blue-700 hover:underline"
                >free consultation</a
              >.
            </h2>
          </div>
        </div>

        <aside class="w-full flex flex-col items-stretch gap-6 mt-6">
          <div class="w-full">
            <GalleryGrid
              items={[
                {
                  src: galleryImg1,
                  alt: "Main accessible kitchen installation showing wheelchair-friendly design with lowered surfaces",
                  label: "Accessible Kitchen Overview",
                },
                {
                  src: galleryImg2,
                  alt: "Accessible kitchen layout with wheelchair user demonstrating open space and reachability",
                  label: "Wheelchair User Accessibility",
                },
                {
                  src: galleryImg3,
                  alt: "Lowered hob in an accessible kitchen for easy and safe use",
                  label: "Lowered Hob Feature",
                },
                {
                  src: galleryImg4,
                  alt: "Accessible kitchen sink design with clearance for seated use",
                  label: "Accessible Sink Area",
                },
                {
                  src: galleryImg5,
                  alt: "Pull-out unit designed for accessible kitchen storage",
                  label: "Pull-Out Storage Unit",
                },
                {
                  src: galleryImg6,
                  alt: "Remote-controlled adjustable worktop in accessible kitchen",
                  label: "Remote-Controlled Worktop",
                },
              ]}
            />
          </div>
          <div class="w-full">
            <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md">
              <h2
                class="text-xl sm:text-2xl font-bold mb-4 text-gray-800 text-center"
              >
                Get in Touch
              </h2>
              <p class="text-gray-600 mb-6 text-center">
                Need help with a heritage or restoration joinery project? Iâ€™d be
                happy to discuss how we can help.
              </p>
              <ContactForm />
            </div>
          </div>
        </aside>
      </div>

      <NearbyAreas location={location} />
    </section>
  </main>
</Layout>
