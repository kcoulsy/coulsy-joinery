---
import { Image } from "astro:assets";

import ContactForm from "../components/ContactForm.astro";

import Layout from "../layouts/Layout.astro";
import servicesHeaderImg from "../assets/images/timber20joinery.jpg";
import studWall from "../assets/images/stud-wall-new-build.jpeg";
import mouldingPlane from "../assets/images/moulding_plane.png";
import kitchenInstallers from "../assets/images/Kitchen-Installers.jpg";
import rooftop from "../assets/images/rooftop.jpg";
import cutRoofHeader from "../../src/assets/images/cut-roofs/cut-roof-header.jpg";
import doorHanging from "../assets/images/doors/fire-doors-sign.png";
import NearbyAreas from "../components/NearbyAreas.astro";
import Why from "./../components/Why.astro";

const { location, type } = Astro.params;

function capitalizeFirstLetter(string: string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}
let typeFormated = type
  ? type.split("-").map(capitalizeFirstLetter).join(" ")
  : "Joinery Services";

if (type === "/joinery-services/traditional-cut-roofs") {
  typeFormated = "Carpentry and Joinery Services in";
}

const locationFormated = location ? capitalizeFirstLetter(location) : "";
---

<Layout title="Joinery Services">
  <div class="h-[600px] w-full absolute">
    <div class="w-full h-full backdrop-blur-[2px] absolute bg-gray-700/20">
    </div>
    <Image
      src={servicesHeaderImg}
      width="856"
      height="512"
      class="object-fit w-full h-[600px]"
      alt="COULSY Carpentry and joinery Services"
      loading="eager"
    />
  </div>
  <main class="mx-auto md:mt-16 relative z-10">
    <div class="flex flex-wrap max-w-screen overflow-x-hidden">
      <div class="w-full md:w-2/3 lg:w-2/3 md:px-4">
        <div
          class="flex justify-center items-center h-80 md:h-[536px] pt-16 md:pt-0 pb-16"
        >
          <h1
            class="text-[56px] leading-[56px] mt-4 font-bold text-white w-96 text-center"
          >
            {typeFormated}
            {locationFormated}
          </h1>
        </div>
      </div>

      <div class="lg:w-1/3 md:w-1/3 pr-4 pl-4">
        <div class="flex flex-wrap flex-col lg:pb-2">
          <ContactForm />
        </div>
      </div>
    </div>

    <div class="w-full container mx-auto px-8 py-8">
      <div class="flex justify-left">
        <nav class="text-sm sm:text-base pb-6">
          <ol class="list-none p-0 inline-flex space-x-2">
            <li class="flex items-center">
              <svg
                onclick="window.location.href='/';"
                xmlns="http://www.w3.org/2000/svg"
                height="1em"
                viewBox="0 0 576 512"
                class="cursor-pointer hover:fill-blue-500 transition-colors duration-300 mr-2"
                fill="#4b5563"
              >
                <!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                <path
                  d="M575.8 255.5c0 18-15 32.1-32 32.1h-32l.7 160.2c0 2.7-.2 5.4-.5 8.1V472c0 22.1-17.9 40-40 40H456c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1H416 392c-22.1 0-40-17.9-40-40V448 384c0-17.7-14.3-32-32-32H256c-17.7 0-32 14.3-32 32v64 24c0 22.1-17.9 40-40 40H160 128.1c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2H104c-22.1 0-40-17.9-40-40V360c0-.9 0-1.9 .1-2.8V287.6H32c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z"
                ></path></svg
              >
              <span class="mx-2">/</span>
            </li>
            <li class="flex items-center">
              <span class="text-yellow-600 font-semibold">Joinery Services</span
              >
            </li>
          </ol>
        </nav>
      </div>

      <h1 class="text-3xl font-bold">Joinery Services</h1>
      <h2 class="text-xl font-light mb-4 mt-4">
        Delivering to your needs and requirements.
      </h2>
      <h4 class="text-xl font-light mb-4 mt-1">
        At Coulsy Joinery, we deliver a comprehensive range of top-notch
        carpentry and joinery services including contracting and sub contracting
        solutions.
      </h4>
      <p class="text-md font-light mb-4 mt-1">
        Our services include annexe building, truss roofs, traditional cut
        roofs, stud wall partitioning, door and fire door installation, kitchen
        installing, custom joinery, bespoke refits, and complete project
        management, all tailored to meet your specific needs.
      </p>

      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 mt-6">
        <div
          class="group p-6 sm:p-8 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
        >
          <div class="relative overflow-hidden rounded-xl">
            <Image
              src={rooftop}
              alt="truss and trussed roof installers"
              loading="eager"
              width="1000"
              height="667"
              class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105"
            />
          </div>
          <div class="mt-6 relative">
            <h3
              class="text-2xl font-semibold text-gray-800 dark:text-white text-center"
            >
