---
// This is the initial menu and footer joinery services page but not the page for eg york-joinery-services

import Layout from "../layouts/Layout.astro";
import OurServicesDescription from "../components/OurServicesDescriptionLeftAligned.astro";
import OurServicesBody from "../components/OurServicesBody.astro";
---

<Layout title="Our joinery services">
  <div class="w-full container mx-auto px-8 py-12">
    <div class="flex justify-left">
      <nav class="text-sm sm:text-base pb-6">
        <ol class="list-none p-0 inline-flex space-x-2">
          <li class="flex items-center">
            <svg
              onclick="window.location.href='/';"
              xmlns="http://www.w3.org/2000/svg"
              height="1em"
              viewBox="0 0 576 512"
              class="cursor-pointer hover:fill-blue-500 transition-colors duration-300 mr-2"
              fill="#4b5563"
            >
              <!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
              <path
                d="M575.8 255.5c0 18-15 32.1-32 32.1h-32l.7 160.2c0 2.7-.2 5.4-.5 8.1V472c0 22.1-17.9 40-40 40H456c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1H416 392c-22.1 0-40-17.9-40-40V448 384c0-17.7-14.3-32-32-32H256c-17.7 0-32 14.3-32 32v64 24c0 22.1-17.9 40-40 40H160 128.1c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2H104c-22.1 0-40-17.9-40-40V360c0-.9 0-1.9 .1-2.8V287.6H32c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z"
              ></path></svg
            >
            <span class="mx-2">/</span>
          </li>
          <li class="flex items-center">
            <span class="text-yellow-600 font-semibold">Joinery Services</span>
          </li>
        </ol>
      </nav>
    </div>

    <div
      class="bg-yellow-50 border border-yellow-200 rounded-xl p-6 mb-8 shadow-sm"
    >
      <h2 class="text-2xl font-semibold text-yellow-800 mb-2">
        Crafted with Care, Built to Last
      </h2>
      <p class="text-gray-700">
        From minor home fixes to fully bespoke builds, I’m here to help bring
        your ideas to life with honesty, skill, and experience you can rely on.
      </p>
    </div>
    <blockquote
      class="border-l-4 border-yellow-500 pl-4 italic text-gray-800 mb-6"
    >
      I'm Robert, and I personally handle every project with care — whether it’s
      hanging a new door or building a complete garden room. I bring years of
      hands-on experience and a real commitment to doing things properly. I
      enjoy working with homeowners, landlords, and small business owners who
      appreciate honest, reliable craftsmanship.
    </blockquote>
    <OurServicesDescription />
    <OurServicesBody />
    <p class="text-center mt-10 text-blue-700 font-semibold">
      Not sure if your job is too small? <a
        href="/contact"
        class="hover:underline">Just ask — we’re happy to help.</a
      >
    </p>
  </div>
</Layout>
